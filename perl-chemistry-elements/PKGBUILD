# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=perl-chemistry-elements
pkgver=1.065
pkgrel=1
pkgdesc="Perl extension for working with Chemical Elements"
arch=('any')
url="https://github.com/briandfoy/chemistry-elements"
license=('GPL' 'PerlArtistic')
groups=()
depends=(
  'perl>=5.10.0')
makedepends=(
  'perl-extutils-makemaker>=6.64'
  'perl-pathtools'
  'perl-test-simple>=0.94')
checkdepends=('perl-test-pod')
replaces=()
backup=()
options=()
_distdir="Chemistry-Elements-${pkgver}"
source=("http://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/${_distdir}.tar.gz")
sha512sums=('cc5e941f06e589a96240966d79b1bc99c780ea16737ed1a47b159771d8561feaa99a2930f3b50db002ca63528c6504d3953bb6bf3a72c14aa136a68f16fc2001')

build() {

    cd ${_distdir}

    perl Makefile.PL
    make

}

check() {

    cd ${_distdir}

    make test

}

package() {

    cd ${_distdir}

    make DESTDIR="${pkgdir}" install

}
