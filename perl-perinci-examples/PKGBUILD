  'perl>=5.34'
  'perl<5.35'
  'perl-experimental'
  'perl-log-ger>=0.037'
  'perl-perinci-object>=0.311'
  'perl-perinci-sub-property-arg-cmdline'
  'perl-perinci-sub-util>=0.470'
