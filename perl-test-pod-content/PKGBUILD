pkgname='perl-test-pod-content'
pkgver='0.0.6'
pkgrel=7
pkgdesc='Test Pod content'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-pod-simple'
  'perl-test-simple'
  'perl-version'
)
makedepends=(
  'perl-module-build>=0.36'
)
checkdepends=(
  'perl-test-kwalitee'
  'perl-test-pod'
  'perl-test-pod-coverage'
)
