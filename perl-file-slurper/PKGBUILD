# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname='perl-file-slurper'
pkgver=0.012
pkgrel=1
pkgdesc="A simple, sane and efficient module to slurp a file"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=(
  'perl-perlio-utf8_strict')
depends=(
  'perl>=5.8.0'
  'perl-carp'
  'perl-constant'
  'perl-encode>=2.11'
  'perl-exporter>=5.57')
makedepends=(
  'perl-extutils-makemaker'
  'perl-file-temp'
  'perl-pathtools'
  'perl-test-simple'
  'perl-test-warnings')
checkdepends=()
url='https://github.com/Leont/file-slurp-sane'
source=("http://search.mcpan.org/CPAN/authors/id/L/LE/LEONT/File-Slurper-${pkgver}.tar.gz")
sha512sums=('276b510c85b4e28fff4b8bd77c81031367b073426138743efb5d54fe01fa9825409f86090788779e96625b43207d1f864f348cc11554c51d36868dfed568f2bb')
_distdir="File-Slurper-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
