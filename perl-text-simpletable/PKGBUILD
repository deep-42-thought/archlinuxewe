pkgname='perl-text-simpletable'
pkgver=2.05
pkgrel=1
pkgdesc='Simple eyecandy ASCII tables'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.8.1'
  'perl-extutils-makemaker'
  'perl-test-simple'
  'perl-unicode-linebreak')
checkdepends=('perl-test-pod' 'perl-test-pod-coverage')
url='https://metacpan.org/release/Text-SimpleTable'
_distdir="Text-SimpleTable-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/M/MR/MRAMBERG/${_distdir}.tar.gz")
sha512sums=('52a5f3a7469bf9c757c309315c5bd90ae28e854f6e19459c6a9ef5f863155e0dd02ae9bf39abfc2ec8c0b705775a1138c7e3d617e2b21f1b7a35c09cbc309a46')

build(){
  cd "${srcdir}/${_distdir}"
  
  # Setting these env variables overwrites any command-line-options we don't want...
  export PERL_MM_USE_DEFAULT=1 TEST_POD=1 PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='${pkgdir}'" \
    PERL_MB_OPT="--installdirs vendor --destdir '${pkgdir}'" \
    MODULEBUILDRC=/dev/null

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    perl Makefile.PL
    make
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build.PL
    perl Build
  fi
}

check(){
  cd "${srcdir}/${_distdir}"

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make test
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build test
  fi
}

package(){
  cd "${srcdir}/${_distdir}"
  
  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make install
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build install
  fi

  # remove perllocal.pod and .packlist
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
