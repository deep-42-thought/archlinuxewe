pkgname=python-pyfai
_pkgname=pyFAI
pkgver=0.21.2
pkgrel=1
pkgdesc="Fast Azimuthal Integration in Python."
arch=('i686' 'pentium4' 'x86_64')
url="http://www.silx.org"
license=('GPLv3' 'BSD' 'MIT')
_pinned_dependencies=(
  'gcc-libs=11.2.0'
  'glibc>=2.31'
)
depends=(
  "${_pinned_dependencies[@]}"
  'cython'
  'python>=3.10'
  'python<3.11'
  'python-bash_kernel'
  'python-fabio'
  'python-h5py'
#  'python-hdf5plugin'
  'python-ipympl'
  'python-matplotlib'
#  'python-nbsphinx'
  'python-numexpr'
  'python-numpy'
  'python-pyfai'
  'python-opengl'
  'python-pyqt5'
  'python-scipy'
  'python-silx>=0.15.2'
#  'python-transformations'
  'python-wheel')
makedepends=(
  'python-setuptools')
source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/silx-kit/${_pkgname}/archive/v${pkgver}.tar.gz")
sha512sums=('8ef63a4276e66c35ee846fd53cbe428097f634cce957e2eae763ecb244a920c1b0b31a4f0011cef14419c1ec6f5db1a1ecc5e38762926b5e84e35a7058768fb3')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}/" --optimize=1
  install -D LICENSES.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -D copyright "${pkgdir}/usr/share/licenses/${pkgname}/COPYRIGHT"
}
