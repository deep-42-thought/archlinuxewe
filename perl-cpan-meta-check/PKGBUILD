# Maintainer: Erich Eckner <arch at eckner dot net>
# Contributor: Moritz Bunkus <moritz@bunkus.org>

pkgname='perl-cpan-meta-check'
pkgver=0.013
pkgrel=1
pkgdesc="Verify requirements in a CPAN::Meta object"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-base'
  'perl-cpan-meta>=2.132830'
  'perl-cpan-meta-requirements>=2.121'
  'perl-exporter'
  'perl-module-metadata>=1.000023')
makedepends=(
  'perl-env'
  'perl-extutils-makemaker'
  'perl-test-deep'
  'perl-test-simple>=0.88')
url='http://search.cpan.org/dist/CPAN-Meta-Check'
_distdir="CPAN-Meta-Check-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/L/LE/LEONT/${_distdir}.tar.gz")
sha512sums=('c7bb972ce6afd21f415d0bca03f9ebefe0298e8b7db32e42f0195ae5da535da079f482c9d2bf598cb39d234b467397eb4b949b93c34c4d02b113caf76fd5a9c5')

prepare_environment() {
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                   \
    PERL_AUTOINSTALL=--skipdeps                              \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='${pkgdir}'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '${pkgdir}'" \
    MODULEBUILDRC=/dev/null
  cd "${srcdir}/${_distdir}"
}

build() {
  prepare_environment
  perl Makefile.PL
  make
}

check() {
  prepare_environment
  make test
}

package() {
  prepare_environment
  make install
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
