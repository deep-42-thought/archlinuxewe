pkgname='perl-tree-simple'
pkgver=1.28
pkgrel=1
pkgdesc="A simple tree object"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
checkdepends=('perl-test-exception>=0.15' 'perl-test-memory-cycle')
url='https://metacpan.org/release/Tree-Simple'
source=("http://search.cpan.org/CPAN/authors/id/R/RS/RSAVAGE/Tree-Simple-${pkgver}.tgz")
sha512sums=('5872a63cd7c07649e736f05f4dbadfa685d1868ff1852c52b1b5976afaae6a4798ee9b2a98b71aedddf9ce2eb81e35c0b1ac7fe6ac33f111455efc2d170053cb')
_distdir="Tree-Simple-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

