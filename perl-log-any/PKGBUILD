# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-log-any'
pkgver='1.040'
pkgrel='3'
pkgdesc='Bringing loggers and listeners together'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-log-any-adapter=1.040'
  'perl-log-any-adapter-base=1.040'
  'perl-log-any-adapter-file=1.040'
  'perl-log-any-adapter-null=1.040'
  'perl-log-any-adapter-stderr=1.040'
  'perl-log-any-adapter-stdout=1.040'
  'perl-log-any-adapter-test=1.040'
  'perl-log-any-adapter-util=1.040'
  'perl-log-any-manager=1.040'
  'perl-log-any-proxy=1.040'
  'perl-log-any-proxy-test=1.040'
  'perl-log-any-test=1.040')
depends=(
  'perl>=5.8.1'
  'perl-carp'
  'perl-constant'
  'perl-data-dumper'
  'perl-exporter'
  'perl-io'
  'perl-test-simple')
makedepends=(
  'perl-base'
  'perl-extutils-makemaker>=6.17'
  'perl-file-temp'
  'perl-pathtools')
checkdepends=()
url='https://metacpan.org/release/Log-Any'
_distdir="Log-Any-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/${_distdir}.tar.gz")
sha512sums=('f6ed51725026603d2b3b3f661ec7c6b6d2075f18dee68dc48afe0d87cd55cc48d04874a27d29bcb9157cf71139244261a8bb41881bb9b6167c6746555805a43b')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
