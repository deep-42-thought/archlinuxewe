pkgname=check-kernel
pkgver=0.2
pkgrel=1
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('0e7b8824dd00ed5a2a65d6b3d8eb2fdd6cb69391c0f43bf5a219932e11af7cb09ce3f6b80560bf3b2ae728466228eb8df0f0da25195e845badc2fef7bf656d78')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
