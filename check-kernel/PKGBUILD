# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=check-kernel
pkgver=0.5.2
pkgrel=1
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/check-kernel.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('cfbf2f57e0c5288629e24a2c8e0ba1b042b7ff810bea71a6740cf1d795f57929f82c0e30b817abf01dc888a0908ba06157dee5ae3d243a78f43587fba2f5479f')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
