pkgname=check-kernel
pkgver=0.1
pkgrel=1
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('24cd73946da53844dbff96f7dfba0174dd5c686c8607a92cd97a908924ccb9c4805bf7218353b73a721b02e041e247c07c3372a5d02932b3cb7c95cb10efcfe9')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
