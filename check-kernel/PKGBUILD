# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=check-kernel
pkgver=0.5.7
pkgrel=1
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/check-kernel.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('8cfed782bd2d27f331bd5b9400a4b906b62939b2dfda7ae2beede8726d78da19a8ef1dfd75ecb7a8fac90e02e604f7293a5464a3f4f5969c90800686dea0e7d6')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
