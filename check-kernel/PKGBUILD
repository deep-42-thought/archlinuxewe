# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=check-kernel
pkgver=0.5.5
pkgrel=1
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/check-kernel.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('d63130cb0dd8e6489924ac15e523953fd2d57eb201cabea80fc6b89d0afd9f57fc7e72e0cfd95b8966ef77d920af5709677951db846eecb74090d56e59687e60')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
