# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=check-kernel
pkgver=0.5.4
pkgrel=1
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/check-kernel.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('001b1629bd8c4345b35fdd5be2f625aa56a54b0c19d69d1147de4294206ff019bad9e305a22b8c66546f350f10c60e805f82629bcf38c7ca98fd087f29a1f7af')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
