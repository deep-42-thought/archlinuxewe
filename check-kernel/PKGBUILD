pkgname=check-kernel
pkgver=0.3
pkgrel=1
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('eb662c353f6c85449e251c27d1c5bdb8c4128d21538ed189126b05d4b77c76c68b5d19e3b5f25a60f1cad7f108ff517c1265d736cd583d472284b71093d22c96')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
