# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=check-kernel
pkgver=0.5.9
pkgrel=2
pkgdesc='check if the installed kernel is currently running'
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=(
  'shutdownasap:  less interuptive reboot'
)
provides=()
conflicts=()
replaces=()
backup=('etc/check-kernel.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('935184175e0c28c07f01eee4802ba023076bc899c588aba7e839de81f3632de4e8523f0a6915e1da23d50aa80a41ac9cdca62bab85735040b70ac25f02e5e549')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
