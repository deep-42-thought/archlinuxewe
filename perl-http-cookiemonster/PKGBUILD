pkgname='perl-http-cookiemonster'
pkgver='0.09'
pkgrel='5'
pkgdesc='Easy read/write access to your jar of HTTP::Cookies'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-carp'
  'perl-http-cookies'
  'perl-moo>=1.000003'
  'perl-safe-isa'
  'perl-scalar-list-utils'
  'perl-sub-exporter'
  'perl-uri-escape')
