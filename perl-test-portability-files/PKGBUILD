pkgver='0.07'
pkgrel='1'
pkgdesc='Check file names portability'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-pathtools'
  'perl-test-simple'
)
