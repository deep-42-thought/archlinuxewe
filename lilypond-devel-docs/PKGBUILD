pkgname=lilypond-devel-docs
pkgver=2.19.83
pkgrel=2
pkgdesc="Offline documentation for lilypond"
arch=('any')
url="http://lilypond.org"
license=('GPL')
options=('!strip')
source=("http://lilypond.org/downloads/binaries/documentation/lilypond-${pkgver}-1.documentation.tar.bz2")
sha512sums=('0d73eaa86533306ef3e7208daf4fab9b8b53beaa64cb32cb6e078049790cd2b4135c5abd351239801d5ec5beb467fd739c39d25c5c96afb4e7718ff929ce7e08')
depends=("lilypond=${pkgver}")

package(){
  install -d ${pkgdir}/usr/share
  cp -R ${srcdir}/share/doc/ ${srcdir}/share/omf/ ${pkgdir}/usr/share/
}
