pkgname='perl-log-contextual'
pkgver=0.008001
pkgrel=4
pkgdesc='Simple logging interface with a contextual log'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.30'
  'perl<5.31'
  'perl-carp'
  'perl-data-dumper-concise'
  'perl-exporter-declare>=0.111'
  'perl-moo>=1.003'
  'perl-scalar-list-utils'
)
