  'perl>=5.10.1'
  'perl-exporter>=5.57'
  'perl-file-which'
  'perl-ipc-system-options>=0.330'
  'perl-pathtools')
makedepends=(
  'perl-extutils-makemaker'
  'perl-file-chdir'
  'perl-file-slurper'
  'perl-file-temp'
  'perl-io'
