# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname=nodejs-configurable-http-proxy
pkgver=3.0.0
pkgrel=1
pkgdesc="node-http-proxy plus a REST API"
url="https://github.com/jupyter/configurable-http-proxy"
arch=('any')
license=('BSD')
depends=('nodejs')
makedepends=('npm')
source=("https://github.com/jupyterhub/configurable-http-proxy/archive/${pkgver}.tar.gz")
sha512sums=('3dd3962a03fde86a647f0be44fd8e68905f417bb58ad0e3ffc816f134ee490dd988de1398437d134db7cfd82f6696320163e2632d71388077ad0b8e52e990efd')
_npmname=configurable-http-proxy

package() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver

  rm -rf "$pkgdir/usr/etc"
  chown -R root:root "$pkgdir/usr"
  cd "$srcdir/$_npmname-$pkgver"
}
