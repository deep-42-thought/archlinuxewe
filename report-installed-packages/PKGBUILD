# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=report-installed-packages
pkgver=0.1
pkgrel=1
pkgdesc="report about installed (and therefore presumably working) packages from testing"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=('sendmailadvanced:  for sending email reports')
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('08f072aab3d9a96ce7c76b91e8939a7f9c5a31c8783f236fa25bf5c7f8b3af6b2c62ac1df7c35cc3d64bf0ced77600a8d4cbd887a002d33f1d06eb346fcd04cf')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
