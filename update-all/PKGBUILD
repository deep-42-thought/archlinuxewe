# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.6.13
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=(
  'inetutils'
  'pacman-contrib'
  'vim'
)
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
  'shutdownasap:   allow for less-interuptive reboot'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('c4acb2d4375f6c18ee1e2f78bb68e7e21491ebbb68898b3f67b343c7f9e9ab85d53fd177293603462a6e4381bf58d4423a7282b7237c358deee7a069f1e79778')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
