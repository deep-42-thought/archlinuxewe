# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.7.3
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=(
  'archlinux-contrib'
  'inetutils'
  'pacman-contrib'
  'vim'
)
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
  'shutdownasap:   allow for less-interuptive reboot'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('088bdbfd2ee7e327abb24d58922de06c26a1a6043264d2f7c6b589e677f71c1988d210f9b7e1fea5dab889774eeb52950f5de39f3d420d281fdfc2fdee1ab658')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
