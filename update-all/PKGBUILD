# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.4
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('7b9ee5f457a3b42c318785449132b4fb4fe80fd1799c8cfe26b337f8233651eb1fa90333dea0ef0d47e7e0b3edbfd2a33a0fda6cadbcfeebe5ccbf2b56a9e297')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
