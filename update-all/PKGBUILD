# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.4.2
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('c3940639d9691d8169bad87bbbcbc6b279970e0d2b89a7dc95159529104dc6b6beaa8117a2c21bdc2d0cf730ba5e9a00fde2f4ec210aceec35da49240a0afbdd')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
