# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.4.3
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('629fb8ae4a78bcf49624843cae831c01eca1d1a8248209feb052761a86c7af87c9939e9a55e00c74d2520c7d55954cdab2762fdbc9fb684e1492df4c2741d6fe')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
