# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.3
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('161a6020b9d83aee72f25b88368406da8a135dca347d3cad2656d563c438070e776e01c5589b7599ff17fb2e499a8092b22c524b8f96f0d532d097f2d5c68482')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
