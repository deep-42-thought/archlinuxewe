# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.8.5
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=(
  'archlinux-contrib'
  'pacman-contrib'
  'vim'
)
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:            check if reboot is necessary after update'
  'shutdownasap:            allow for less-interuptive reboot'
  'simple-package-report:   allow for telemetry data upload'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('ec5d465214fae8798e711445055643a2385f1c4f994f08a2cdb88cf9f0906018c20a5fe1306d603d13a91f339f6175d40637e7b8906a2deb504cfb1d2b24fd8b')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
