# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.6.12
pkgrel=2
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=(
  'inetutils'
  'pacman-contrib'
  'vim'
)
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
  'shutdownasap:   allow for less-interuptive reboot'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('7ac2130173be9aca642e481e28715e30308a18c75d73544817a55c31576e7656770406b764799a57790665a1478a0c8c5660b79baa9ad44313ba3090c6802a57')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
