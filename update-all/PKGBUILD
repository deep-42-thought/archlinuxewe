# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.3.1
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('5ef283f31f694bbf8731a7f22f01e7f3d674b0a709caa781f54f34942a498380944be8cc7dfb644b3ddc924525a23abc51057de0f970a19b0c030d1731708cad')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
