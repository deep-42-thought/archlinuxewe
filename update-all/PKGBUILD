# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.8
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=(
  'archlinux-contrib'
  'pacman-contrib'
  'vim'
)
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
  'shutdownasap:   allow for less-interuptive reboot'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('5672a40fe3772081b572ab87c425696aca6712600f66be1bd621efa681bb7d56e74c53635ea99d1acfa0d8ad8c4581f27ac2e3e95c2be2fe7b7737f0d9dd11ca')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
