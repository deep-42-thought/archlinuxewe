# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.4.1
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('856006caaf5c3abe84e0f54fedbe87c206df819c7ff8085ea90d017ea4f46b7f5adf635648612b2f5b629c018add0b47e3827cc8a036880a47d56e1bb735f300')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
