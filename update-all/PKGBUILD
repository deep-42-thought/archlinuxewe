# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.1
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('45a5ded66d0a45911557c06b624e7b02f37d9a35dd4b76dd44e1823f9f368ddeed52bb8ed73ab3e24c664438edbdfa5d37d169e1be374be918efd33babcdfb09')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
