# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.5
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=(
  'pacman-contrib'
  'vim'
)
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('fb7d85ea1b3828793ed7ea2a01bdabacbc7dc159d204af1b1a796d918b082e32c47dc0b76b8f99ceb7bdc968d143732e7082f1cd802b5581ad7efc75e7a94a91')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
