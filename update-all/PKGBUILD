# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-all
pkgver=0.8.2
pkgrel=1
pkgdesc="Simple script for installing updated packages"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=(
  'archlinux-contrib'
  'pacman-contrib'
  'vim'
)
makedepends=()
checkdepends=()
optdepends=(
  'check-kernel:   check if reboot is necessary after update'
  'shutdownasap:   allow for less-interuptive reboot'
)
provides=()
conflicts=()
replaces=()
backup=('etc/update-me.conf' 'etc/update-all.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('0d840b0498953b1d9eb9b442b093e6880476fda970d76cdce28652cb5fc999438e907706f1b70700859842b2736c08d070b8accbc92af13a773abe965b9401a7')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
