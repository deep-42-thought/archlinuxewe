# Maintainer: Erich Eckner <arch at eckner dot net>
_pkgname='hardlinkedBackups'
pkgname=hardlinked-backups
pkgver=1.5.3
pkgrel=1
pkgdesc='Generate hardlinked incremental backups via rsync (and possibly through a SOCKS-tunnel via ssh)'
arch=('any')
url="https://git.eckner.net/Erich/${_pkgname}"
license=('GPL')
groups=()
depends=('rsync' 'bc')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/backup.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${_pkgname}/snapshot/${_pkgname}-${pkgver}.tar.xz"
)
sha512sums=('589643667d94bdd5437aeb93169f34ad4b6c2e6e5dad250ae889c3933bc7c90217e2ebb3f5809b7ad3756aa934921bff72aba5eb16152b6b042dce4cd209e6e1')

build() {

    cd ${_pkgname}-${pkgver}
    make

}

package() {

    cd ${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
