# Maintainer: Erich Eckner <arch at eckner dot net>
_pkgname='hardlinkedBackups'
pkgname=hardlinked-backups
pkgver=1.2.1
pkgrel=1
pkgdesc='Generate hardlinked incremental backups via rsync (and possibly through a SOCKS-tunnel via ssh)'
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${_pkgname}"
license=('GPL')
groups=()
depends=('rsync')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/backup.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_pkgname}-${pkgver}"
)
sha512sums=('9ca6567a1909b897076348e4154069882610fb34f749bed2667dde7dc9abb8863d5d86a1cb3194e8ceb80f0c170bc325193c58ff563f6d3066cbb813be274a3f')

build() {

    cd ${_pkgname}-${pkgver}
    make

}

package() {

    cd ${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
