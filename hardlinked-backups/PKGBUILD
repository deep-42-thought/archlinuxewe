# Maintainer: Erich Eckner <arch at eckner dot net>
_pkgname='hardlinkedBackups'
pkgname=hardlinked-backups
pkgver=1.2
pkgrel=1
pkgdesc='Generate hardlinked incremental backups via rsync (and possibly through a SOCKS-tunnel via ssh)'
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${_pkgname}"
license=('GPL')
groups=()
depends=('rsync')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/backup.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_pkgname}-${pkgver}"
)
sha512sums=('25e25a4bf967aa415d7ca5dcc0154747db35eb6c9284f34d5e1c2dc6a9b82153fc01e4bf4fcb384082947db5a194108b005d61d5f08fde723264e7841af901c5')

build() {

    cd ${_pkgname}-${pkgver}
    make

}

package() {

    cd ${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
