pkgver=0.1
pkgrel=1
pkgdesc="Sendmail replacement collecting emails into digests."
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/digest-mailer.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('4af5cbde8d922f5f8b326add4de1dee54aae3c9c806ccdc220a5c1c7622aeed786c9a53db4220158313ff597c6042942c0d398358e5a87eb1160e12c8d2e1658')

build() {

    cd ${pkgname}-${pkgver}
