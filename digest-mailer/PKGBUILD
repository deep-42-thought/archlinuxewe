pkgname=digest-mailer
pkgver=0.3
pkgrel=1
pkgdesc="Sendmail replacement collecting emails into digests."
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/digest-mailer.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('ab4f43016ea41ff7fb392455abd35cb3bf24073310970f2cb8a069d3581dc2fdf9b2bd760c31d1cc3a64b53620f581c0d9e71a9daed949dd23a5e4b09293d9f4')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
