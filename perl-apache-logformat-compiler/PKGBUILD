pkgname='perl-apache-logformat-compiler'
pkgver='0.33'
pkgrel='2'
pkgdesc='Compile a log format string to perl-code'
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.8.1'
  'perl-posix-strftime-compiler>=0.30'
  'perl-time-local')
makedepends=(
  'perl-http-message'
  'perl-module-build>=0.38'
  'perl-test-mocktime'
  'perl-test-requires'
  'perl-test-simple>=0.98'
  'perl-try-tiny>=0.12'
  'perl-uri-escape>=1.60')
