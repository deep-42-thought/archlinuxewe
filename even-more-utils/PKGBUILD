# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname=even-more-utils
pkgver=0.1
pkgrel=1
pkgdesc='utilities which are even missing from moreutils'
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('8f7d7e554c1884617004e833d57965a21ce10121e7820acb1fe66cec646f6d4bfd1c8b94a753b99581c33f2f68cc8f67e218631c5328dbc6181b3b62ea76d27a')

build() {
  cd "${pkgname}-${pkgver}"
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
