pkgname='perl-lwp-protocol-http10'
pkgver='6.03'
pkgrel=6
pkgdesc='Legacy HTTP/1.0 support for LWP'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-http-message>=6'
  'perl-io'
)
makedepends=(
  'perl-extutils-makemaker'
)
