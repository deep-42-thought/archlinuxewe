# Maintainer: Erich Eckner <arch at eckner dot net>
# Contributor: Allan McRae <allan@archlinux.org>

pkgname=libmpc-static
pkgver=1.1.0
pkgrel=1
pkgdesc="Library for the arithmetic of complex numbers with arbitrarily high precision"
arch=('x86_64')
url="http://www.multiprecision.org/"
license=('LGPL')
depends=('mpfr-static')
source=(https://ftp.gnu.org/gnu/mpc/mpc-${pkgver/_/-}.tar.gz{,.sig})
md5sums=('4125404e41e482ec68282a2e687f6c73'
         'SKIP')
validpgpkeys=('AD17A21EF8AED8F1CC02DBD9F7D5C9BF765C61E3')  # Andreas Enge

build() {
  cd "${srcdir}/mpc-${pkgver}"
  LDFLAGS+=' -static '
  ./configure --prefix=/usr
  make
}

check() {
  cd "${srcdir}/mpc-${pkgver}"
  make check
}

package() {
  cd "${srcdir}/mpc-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm -rf --one-file-system "$pkgdir/usr/include/" "$pkgdir/usr/share"
}
