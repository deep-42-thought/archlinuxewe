# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=python-jira
_pkgname="${pkgname#*-}"
pkgver=3.1.1
pkgrel=27
pkgdesc="Python library to work with Jira APIs"
arch=(any)
url="https://github.com/pycontribs/jira"
license=('BSD')
depends=(

  'python<3.10'
  'python>=3.9')
makedepends=(
  'python-setuptools')
source=("$_pkgname-$pkgver.tar.gz::https://github.com/pycontribs/jira/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('de58631094dbbaf36fa328918f1dcd992684baa8efa8eb9de5ee0d27d2ca784fbc42333aa12f6f627f5543062a23e58ceae4d0decf1eca60c6d96c385481f2e3')

prepare() {
  cd "${srcdir}/jira-${pkgver}"
  sed -i '
    s@\(setuptools.setup(\)use_scm_version=True)@\1version='"'${pkgver}'"')@
  ' setup.py
}

package() {
  cd "${srcdir}/jira-${pkgver}"
  python setup.py install --root="$pkgdir" --optimize=1
  install -Dm 644 -t "$pkgdir/usr/share/licenses/$pkgname" LICENSE
}
