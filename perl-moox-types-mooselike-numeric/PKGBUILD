pkgname='perl-moox-types-mooselike-numeric'
pkgver=1.03
pkgrel='6'
pkgdesc='Moo types for numbers'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.28'
  'perl<5.29'
  'perl-moox-types-mooselike>=0.23')
makedepends=(
  'perl-extutils-makemaker'
  'perl-moo>=1.004002'
  'perl-test-fatal>=0.003'
  'perl-test-simple>=0.96')
