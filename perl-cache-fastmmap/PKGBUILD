pkgname='perl-cache-fastmmap'
pkgver=1.50
pkgrel=1
pkgdesc='Uses an mmap'"'"'ed file to act as a shared memory interprocess cache'
arch=('x86_64' 'i686' 'pentium4')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
_pinned_dependencies=(
  'glibc>=2.31'
)
makedepends=(
  'perl-extutils-makemaker')
depends=(
  'glibc>=2.31'
  'perl-storable')
