pkgname='perl-dynaloader-functions'
pkgver=0.003
pkgrel=6
pkgdesc='deconstructed dynamic C library loading'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.30'
  'perl<5.31'
  'perl-carp'
  'perl-exporter'
  'perl-parent')
makedepends=(
  'perl-module-build'
  'perl-test-simple')
checkdepends=(
  'perl-test-pod'
  'perl-test-pod-coverage')
