pkgname='python-imageio'
_pkgname="${pkgname#*-}"
pkgver=2.16.1
pkgrel=1
arch=('any')
url='https://github.com/xraypy/XrayDB'
license=('BSD')
pkgdesc='Python library that provides an easy interface to read and write a wide range of image data'
source=("$pkgname-$pkgver.tar.gz::https://github.com/imageio/imageio/archive/v$pkgver.tar.gz")
sha512sums=('8cd5ce184f67be9cd5edbd5bf51f59c271a71e8fe68c22d284ddabe24cdec6bcf5e590c9c95664b0205509c133e9cd959d11605226a1d4d99f14e95c6d7527c3')
depends=(
  'python>=3.10'
  'python<3.11'
)
makedepends=(
  'python-setuptools'
)

build() {
  cd "$_pkgname-$pkgver"
  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"
  python setup.py install --root="$pkgdir"
}
