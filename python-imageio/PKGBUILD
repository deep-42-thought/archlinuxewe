pkgname='python-imageio'
_pkgname="${pkgname#*-}"
pkgver=2.10.4
pkgrel=1
arch=('any')
url='https://github.com/xraypy/XrayDB'
license=('BSD')
pkgdesc='Python library that provides an easy interface to read and write a wide range of image data'
source=("$pkgname-$pkgver.tar.gz::https://github.com/imageio/imageio/archive/v$pkgver.tar.gz")
sha512sums=('562bb0d7c8e627e491910f997947a4ffe967ed6dcf3d281b07145f9c8148ca0f2d9775bc89c9024ebc9bfa54f03a60aadc30a84827c050f18dbb23286ac18b96')
depends=(
  'python>=3.9'
  'python<3.10'
)
makedepends=(
  'python-setuptools'
)

build() {
  cd "$_pkgname-$pkgver"
  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"
  python setup.py install --root="$pkgdir"
}
