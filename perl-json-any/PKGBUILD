pkgname='perl-json-any'
pkgver='1.39'
pkgrel=4
pkgdesc='(DEPRECATED) Wrapper Class for the various JSON classes'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
