# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=python-pyepics
_pkgname="${pkgname#*-}"
pkgver=3.4.1
pkgrel=6
pkgdesc='Python Interface to the Epics Channel Access protocol of the Epics control system'
arch=('i686' 'pentium4' 'x86_64')
url='https://pypi.python.org/pypi/pyepics'
license=('Epics Open License')
groups=()
depends=(
  'python>=3.8'
  'python<3.9'
)
makedepends=(
  'python-setuptools'
)
source=(
    "https://pypi.python.org/packages/cb/64/f849f7aef93b7d3d713aa1d5e79ee4b67c84fa3fa1db3e2882e91c000ff6/${_pkgname}-${pkgver}.tar.gz"
)
sha512sums=('bd06fd077676bf95f3c4a66f0d0a119b94e8e6661f6c7f30532f7801ddda8b66c3ccc41f14132c605a77224a81c7669cd20dddd89aaeb7a7c8a0c0a214d3063a')

build() {
  cd ${_pkgname}-${pkgver}
  python setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  python setup.py install --skip-build --root="${pkgdir}" --prefix=/usr
}
