pkgname=python-pyepics
_pkgname="${pkgname#*-}"
pkgver=3.4.2
pkgrel=2
pkgdesc='Python Interface to the Epics Channel Access protocol of the Epics control system'
arch=('i686' 'pentium4' 'x86_64')
url='https://pypi.python.org/pypi/pyepics'
license=('Epics Open License')
groups=()
_pinned_dependencies=(
  'gcc-libs=10.1.0'
  'glibc>=2.31'
)
makedepends=(
  'python-setuptools')
depends=(

  'python>=3.8'
  'python<3.9')
source=(
    "https://pypi.python.org/packages/d7/9e/c3e74b3f9b81d2a9beab467dad1fd156e0ab978a49cf787f36f398caeef4/${_pkgname}-${pkgver}.tar.gz"
)
sha512sums=('7e1d27f893273155d43fa2c95040836ee75e2ac42f51495fba17bcc86045212a4946a302b11c187d0c011ee6f4088597c8125f5b8fd6902695527e22422ae603')

build() {
  cd ${_pkgname}-${pkgver}
  python setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  python setup.py install --skip-build --root="${pkgdir}" --prefix=/usr
}
