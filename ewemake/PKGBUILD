# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=ewemake
_srcpkgname='Make'
pkgver=1.0.2
pkgrel=1
pkgdesc="somewhat more powerfull alternative to 'make'"
arch=('x86_64' 'i686')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('fpc')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=()
source=(
    "${_srcpkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_srcpkgname}-${pkgver}"
)
noextract=(
    "${_srcpkgname}-${pkgver}.tar.gz"
)
sha512sums=('6c3e79355fba72bedb428da3e7c253e98b4f9d7a9624fcb949c4804c546ce6d1aac65bf7af72defa440f43128f0ebf20ef4616e042f733ec60c6dac3a8c85e39')

prepare() {

    tar -ixzf "${_srcpkgname}-${pkgver}.tar.gz"

}

build() {

    cd ${_srcpkgname}-${pkgver}
    make

}

package() {

    cd ${_srcpkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
