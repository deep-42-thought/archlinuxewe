# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=ewemake
_srcpkgname='Make'
pkgver=1.1.2
pkgrel=1
pkgdesc="somewhat more powerfull alternative to 'make'"
arch=('x86_64' 'i686')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('fpc')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=()
source=(
    "${_srcpkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_srcpkgname}-${pkgver}"
)
noextract=(
    "${_srcpkgname}-${pkgver}.tar.gz"
)
sha512sums=('5b4cb1d79639c7efec287195d0b568cb795b9478bb2e4d981ada2b3a2ffca316cd6457f3066dbb35c3129c8138d5e6b34b2201a57516da2123e8b55be3796071')

prepare() {

    tar -ixzf "${_srcpkgname}-${pkgver}.tar.gz"

}

build() {

    cd ${_srcpkgname}-${pkgver}
    make

}

package() {

    cd ${_srcpkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
