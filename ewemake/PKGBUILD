# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=ewemake
_srcpkgname='Make'
pkgver=1.2.1
pkgrel=1
pkgdesc="somewhat more powerfull alternative to 'make'"
arch=('x86_64' 'i686')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('bash' 'gmp')
makedepends=('fpc' 'fpc-src-ewetools')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=()
source=(
    "${_srcpkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_srcpkgname}-${pkgver}"
)
sha512sums=('75d2c75d297b44ec00023e2f2bc959cf354d40cb9e4205499cda93c378a012e7541e401317f9862a6e303c7462d68db4497bb11dc0d721149b997bf267425c1c')

build() {

    cd ${_srcpkgname}-${pkgver}
    make

}

package() {

    cd ${_srcpkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
