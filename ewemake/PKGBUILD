# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=ewemake
_srcpkgname='Make'
pkgver=1.1.3
pkgrel=1
pkgdesc="somewhat more powerfull alternative to 'make'"
arch=('x86_64' 'i686')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('fpc' 'fpc-src-ewetools')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=()
source=(
    "${_srcpkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_srcpkgname}-${pkgver}"
)
sha512sums=('2aec5175f7a14b022c13326d5d726bc9ef799b78aaa86d2e1c8f33e5394d90999a4b7a20ae77861f4e2e42cd2594d627357657793bdde23cfdeea9e613934e2a')

build() {

    cd ${_srcpkgname}-${pkgver}
    make

}

package() {

    cd ${_srcpkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
