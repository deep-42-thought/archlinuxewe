# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=ewemake
_srcpkgname='Make'
pkgver=1.0.1
pkgrel=1
pkgdesc="somewhat more powerfull alternative to 'make'"
arch=('x86_64' 'i686')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('fpc')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=()
source=(
    "${_srcpkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_srcpkgname}-${pkgver}"
)
noextract=(
    "${_srcpkgname}-${pkgver}.tar.gz"
)
sha512sums=('e762d0ea89fc3ccf3f1fd16e4fa4b249a5752577c265063271fa6eff2f15a473b1ae7824e5fec34abd0fac6c1d365e559a0507bcea92fb889e704aa06dc316e9')

prepare() {

    tar -ixzf "${_srcpkgname}-${pkgver}.tar.gz"

}

build() {

    cd ${_srcpkgname}-${pkgver}
    make

}

package() {

    cd ${_srcpkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
