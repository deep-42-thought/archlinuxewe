# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=ewemake
_srcpkgname='Make'
pkgver=1.0.2
pkgrel=1
pkgdesc="somewhat more powerfull alternative to 'make'"
arch=('x86_64' 'i686')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('fpc')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=()
source=(
    "${_srcpkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_srcpkgname}-${pkgver}"
)
noextract=(
    "${_srcpkgname}-${pkgver}.tar.gz"
)
sha512sums=('55677517c29537adbaab7597ca0f05d0b2e2ae6baf8cc6391fe92e82bea6e54aec9dd981ae3cb6299af0aa521df1f4197175b9cf1c84eaf589fb161a24717a97')

prepare() {

    tar -ixzf "${_srcpkgname}-${pkgver}.tar.gz"

}

build() {

    cd ${_srcpkgname}-${pkgver}
    make

}

package() {

    cd ${_srcpkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
