# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=ewemake
_srcpkgname='Make'
pkgver=1.2.3
pkgrel=1
pkgdesc="somewhat more powerfull alternative to 'make'"
arch=('x86_64' 'i686')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('bash' 'gmp')
makedepends=('fpc' 'fpc-src-ewetools')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=()
source=(
    "${_srcpkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${_srcpkgname}-${pkgver}"
)
sha512sums=('1c301ddac80c5192c9189dba622efd46e563fd749b170a97fea80f3a2a98c4602b5fece19331820b63f17295ce1c17898c48f0fad1b1fa0f4c02155b16d0b8d7')

build() {

    cd ${_srcpkgname}-${pkgver}
    make

}

package() {

    cd ${_srcpkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
