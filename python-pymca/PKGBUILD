# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=python-pymca
_pkgname="${pkgname#*-}"
pkgver=5.6.1
pkgrel=1
pkgdesc='Stand-alone application and Python tools for interactive and/or batch processing analysis of X-Ray Fluorescence Spectra'
arch=('i686' 'pentium4' 'x86_64')
url='http://pymca.sourceforge.net/index.html'
license=('MIT License')
_pinned_dependencies=(
  'glibc>=2.31'
)
makedepends=(
  'python-numpy'
  'python-setuptools')
depends=(
  'python>=3.8'
  'python<3.9'
  'python-numpy')
optdepends=(
  'python-pyqt5: gui'
  'python-matplotlib: gui')
source=(
    "${_pkgname}-v${pkgver}.tar.gz::https://github.com/vasole/${_pkgname}/archive/v${pkgver}.tar.gz"
)
sha512sums=('d7a5ff03d082dc591655778e1365d5e85b857bc9103934bf27e58ae3efe7da49870c7a824e2a49856d9e8305e1a76dfa55ed774eb4019277a33990e09a841368')

build() {
  cd ${_pkgname}-${pkgver}
  python setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  python setup.py install --skip-build --root="${pkgdir}" --prefix=/usr
}
