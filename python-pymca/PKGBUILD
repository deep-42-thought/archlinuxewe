# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=python-pymca
_pkgname="${pkgname#*-}"
pkgver=5.6.2
pkgrel=1
pkgdesc='Stand-alone application and Python tools for interactive and/or batch processing analysis of X-Ray Fluorescence Spectra'
arch=('i686' 'pentium4' 'x86_64')
url='http://pymca.sourceforge.net/index.html'
license=('MIT License')
_pinned_dependencies=(
  'glibc>=2.31'
)
makedepends=(
  'python-numpy'
  'python-setuptools')
depends=(
  'python>=3.8'
  'python<3.9'
  'python-numpy')
optdepends=(
  'python-pyqt5: gui'
  'python-matplotlib: gui')
source=(
    "${_pkgname}-v${pkgver}.tar.gz::https://github.com/vasole/${_pkgname}/archive/v${pkgver}.tar.gz"
)
sha512sums=('d86c0fbe087148e4e14a815958f0d39ea93a87a581f593f89e395e4477f09149149900320825d3f2f8a7b8d0b8996adac3d6bfc5f4f91ef93e996e08099db604')

build() {
  cd ${_pkgname}-${pkgver}
  python setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  python setup.py install --skip-build --root="${pkgdir}" --prefix=/usr
}
