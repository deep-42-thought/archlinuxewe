# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=1.0
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('32b674b01e15eb7674aac65f844bb4352c4bd3056e9bc9cd34806d9a910ac815aad73d14878987645709e25a5141d39835c6f06fa25922d34cc124e53b288328')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
