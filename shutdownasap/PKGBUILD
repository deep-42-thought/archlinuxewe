pkgname=shutdownasap
pkgver=0.1
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha256sums=(
    "46b96789476a0be581801e88454d03eb18c2796aa3033f21ad7a67e9b599f2fd"
)

package() {

    cd ${pkgname}-${pkgver}

    install -D -t $pkgdir/usr/bin/ shutdownasap
    install -D -t $pkgdir/etc/ shutdownasap.conf

}
