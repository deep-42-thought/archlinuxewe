# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=0.9
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('29c04a8ed24dd47feea5e9a2f93fa4605fad37fe4e80e77af11adaf8c02abb12f0a7ebe365b99b20e0595da70d47b1958b821c85605e984c979aea41ffd30eaa')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
