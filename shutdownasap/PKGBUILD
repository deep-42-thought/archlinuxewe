# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=0.8.4
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('b1e40a2ec865e458edc73d514617e11148871710687c28f7cc5e0b01e2e34f8f65966ed4184aff29da15793e0733478f55beedcba001b1da9131ae589ceec7c3')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
