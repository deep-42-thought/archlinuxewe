# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=1.0.5
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('25c5b37ed838cf281c9d08c1415752c0c9d100757f26d178d7d1969791ab3e20fc695e276baa6259206179ece4e63b391fec58610ce091bc13c6424f015d6b33')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
