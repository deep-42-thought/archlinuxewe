# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=1.0.4
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('7dd6f391aa0a6720a1c8d57a64e12e112831c8b2cb32b9d6a91bc04a491923f235b3986920251e58ea0da9080fad27e1871dc3bb724bfc08604d0a1cfb9bd03f')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
