# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=0.8.3
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('df71353437384c6adc58e393a6caf780745f4655c24a54c9e3b7bfa57f1750a678cb9877cc70d6553624103edbe47a29c082727e18fa9ed14fdc17eb32a5de97')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
