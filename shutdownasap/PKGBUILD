# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=0.8.1
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('afa294fb2a1b66c1f7e55bbe60e587d9b7c35cc72230fc5feb4b2bc2121b3c501fb8184affdaf65ac62b5d757ef4488828e24c3180d875e07189b40e0bff82fa')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
