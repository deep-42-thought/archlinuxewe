# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=1.0.3
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('sh')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('c2d55917edc06d3c8a4ad09a846be929ffb65b23bb2c31330f5e3a7e99fcc4ff5e84dd8689521ac4bdea29e75ec1e64da2c91606a2a8616304695bd5618a240b')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
