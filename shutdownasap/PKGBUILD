# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=shutdownasap
pkgver=0.3
pkgrel=1
pkgdesc="simple script for shutdown waiting for certain processes and files to disapear"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/shutdownasap.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('73eaee845819d8532f7df4b6c4c9445c37506880d742c5302c1518e4da333bf29664035856a502a0296b0d47d28d04abbafd36710764f35c5ff337c10dfcac6a')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install

}
