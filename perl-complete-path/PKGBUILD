options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-complete-common>=0.22'
  'perl-complete-util>=0.608'
  'perl-exporter>=5.57'
  'perl-log-ger>=0.038')
makedepends=(
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple')
