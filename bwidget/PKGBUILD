pkgname=bwidget
pkgver=1.9.13
pkgrel=1
pkgdesc="A suite of megawidgets for Tk"
arch=('any')
url="https://wiki.tcl.tk/2251"
license=('GPL')
depends=('bash' 'tcl')
source=("http://downloads.sourceforge.net/project/tcllib/BWidget/$pkgver/bwidget-$pkgver.tar.gz")
sha512sums=('5e807e176640d2163d37c5744604d099fd244a3b0f3f186d065602c835fc016382a8a5f859d3123d16ac620e4839ec13ab9f3d0e0e0532bf4251ff7b4a8982e6')

package() {
  cd "${srcdir}"
  install -d "${pkgdir}"/usr/lib/tcl8.6
  cp -r bwidget-$pkgver "${pkgdir}"/usr/lib/tcl8.6/
}
