pkgname='perl-test-rinci'
pkgver='0.14'
pkgrel='1'
pkgdesc='Test Rinci metadata'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.10.1'
  'perl-data-sah'
  'perl-experimental'
  'perl-getopt-long'
  'perl-pathtools'
  'perl-perinci-access-perl>=0.55'
  'perl-perinci-sub-getargs-argv>=0.46'
  'perl-test-simple>=0.98'
)
