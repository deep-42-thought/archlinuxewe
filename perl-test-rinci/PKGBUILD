pkgname='perl-test-rinci'
pkgver=0.150
pkgrel='2'
pkgdesc='Test Rinci metadata'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.10.1'
  'perl-data-sah>=0.891'
  'perl-experimental'
  'perl-getopt-long'
  'perl-pathtools'
  'perl-perinci-access-perl>=0.87'
  'perl-perinci-sub-getargs-argv>=0.83'
  'perl-test-simple>=0.98')
makedepends=(
  'perl-extutils-makemaker'
  'perl-io')
