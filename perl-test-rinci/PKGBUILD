pkgname='perl-test-rinci'
pkgver=0.153
pkgrel=1
pkgdesc='Test Rinci metadata'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple>=0.98')
depends=(
  'perl>=5.10.1'
  'perl-data-dmp>=0.21'
  'perl-data-sah>=0.898'
  'perl-experimental'
  'perl-getopt-long>=2.5'
