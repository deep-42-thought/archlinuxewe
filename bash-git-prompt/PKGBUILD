pkgname=bash-git-prompt
pkgver=0.13
pkgrel=1
pkgdesc="nice, git-aware prompt for bash"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=(
    'etc/bash-git-prompt.conf'
)
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('43428ac12c1d263d92431e56e80300065995233b7a1e7766d8420cff6b767467362a95b41c45f19145edf395e592b274fb72c9edbd4e1177dfc4763f485237ca')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install

}
