pkgname=bash-git-prompt
pkgver=1.2
pkgrel=1
pkgdesc="nice, git-aware prompt for bash"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=(
    'etc/bash-git-prompt.conf'
)
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('db0cb68556a4ed2366c753c1289ce9c72a3ba98c913a4a1c51580925051cc2a8c89d80e8eb52d86021b8a50ef19a899e7a94f49ebacce67af6ee5a012eac24d7')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install

}
