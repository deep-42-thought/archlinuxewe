pkgname=bash-git-prompt
pkgver=1.0
pkgrel=1
pkgdesc="nice, git-aware prompt for bash"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=(
    'etc/bash-git-prompt.conf'
)
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('17708518a607accf08fbdf8604458c7df6e50162ec408b6ecc8c6d57344f7aa07ff89a81d400c6e0110044de98b37d72d0105102f147d67179690f4505144e91')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install

}
