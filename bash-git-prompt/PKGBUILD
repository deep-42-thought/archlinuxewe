pkgname=bash-git-prompt
pkgver=0.14
pkgrel=1
pkgdesc="nice, git-aware prompt for bash"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=(
    'etc/bash-git-prompt.conf'
)
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('7521ce478f1b07aef962b009cd4f902fae9f2d6fdc270e6e8832e0f8b9cc6a4f4cd767d586542f201872f538dcbd8f7e1d86ed362c54b1048d4dfdc60715df3e')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install

}
