pkgname=bash-git-prompt
pkgver=0.12
pkgrel=1
pkgdesc="nice, git-aware prompt for bash"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('5c0d5b384b1ca53ef2054e8cca03c6a4668a3ccc14dbe28f92624a43a23d31e0b98c50ce051f03ce051230ff34952cf02cfc9164ea430dd637e9a93bbe71c7a7')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install

}
