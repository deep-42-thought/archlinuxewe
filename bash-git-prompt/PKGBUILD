pkgname=bash-git-prompt
pkgver=1.1
pkgrel=1
pkgdesc="nice, git-aware prompt for bash"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=(
    'etc/bash-git-prompt.conf'
)
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('c6075e893d5506eb2c4cca40d62b679f9cb6e0447b0d0cbad198819c05837dd286c575c6673558f004b855c4aff4a75520792b7b416b7d9c56576a35a1fd9711')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install

}
