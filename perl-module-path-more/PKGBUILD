pkgname='perl-module-path-more'
pkgver='0.33'
pkgrel=5
pkgdesc='Get path to locally installed Perl module'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.30'
  'perl<5.31'
  'perl-exporter'
  'perl-pathtools'
)
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-file-temp'
  'perl-io'
  'perl-test-exception'
  'perl-test-simple>=0.98'
)
checkdepends=(
  'perl-pod-coverage-trustpod'
  'perl-test-pod'
  'perl-test-pod-coverage'
  'perl-test-rinci'
  'perl-test-simple'
)
