pkgname='perl-ref-util'
pkgver='0.203'
pkgrel='3'
pkgdesc='Utility functions for checking references'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-ref-util-pp=0.203')
depends=(
  'perl>=5.6.0'
  'perl-exporter>=5.57')
makedepends=(
  'perl-extutils-makemaker'
  'perl-pathtools'
  'perl-test-simple>=0.96'
  'perl-text-parsewords')
