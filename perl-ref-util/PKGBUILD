pkgname='perl-ref-util'
pkgver=0.204
pkgrel=7
pkgdesc='Utility functions for checking references'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-ref-util-pp=0.204')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-exporter>=5.57')
makedepends=(
  'perl-extutils-makemaker'
  'perl-pathtools'
  'perl-test-simple>=0.96'
  'perl-text-parsewords')
