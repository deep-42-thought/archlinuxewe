pkgname='python-xraydb'
pkgver=4.4.6
pkgrel=1
arch=('any')
url='https://github.com/xraypy/XrayDB'
license=('Unlicense')
pkgdesc='X-ray Reference Data in SQLite library, including a Python interface'
source=("$pkgname-$pkgver.tar.gz::https://github.com/xraypy/XrayDB/archive/$pkgver.tar.gz")
sha512sums=('55a928344a38841d71434439859ef426ba6efb8b7fd99b2153c7568e63805c0ed2a174f834aeb9e45e782b3663c5b824018d07ec23ad00cdc7f0e585c524b022')
depends=(
  'python>=3.9'
  'python<3.10'
)
makedepends=(
  'python-setuptools'
)

build() {
  cd "XrayDB-$pkgver/python"
  python setup.py build
}

package() {
  cd "XrayDB-$pkgver/python"
  python setup.py install --root="$pkgdir"
}
