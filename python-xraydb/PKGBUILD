pkgname='python-xraydb'
pkgver=4.4
pkgrel=1
arch=('any')
url='https://github.com/xraypy/XrayDB'
license=('Unlicense')
pkgdesc='X-ray Reference Data in SQLite library, including a Python interface'
source=("$pkgname-$pkgver.tar.gz::https://github.com/xraypy/XrayDB/archive/$pkgver.tar.gz")
sha512sums=('66625fbff04b84bfb1fb0e7016d6715924ba850c18eddfc006b68d2a05c3fa86c21a3c42e03903a9a1b2c8e9eb810dfbb178f9ceddf112002a61057d8aebce11')
depends=(
  'python>=3.8'
  'python<3.9'
)
makedepends=(
  'python-setuptools'
)

build() {
  cd "XrayDB-$pkgver/python"
  python setup.py build
}

package() {
  cd "XrayDB-$pkgver/python"
  python setup.py install --root="$pkgdir"
}
