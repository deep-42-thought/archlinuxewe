pkgname='python-xraydb'
pkgver=4.3.4
pkgrel=1
arch=('any')
url='https://github.com/xraypy/XrayDB'
license=('Unlicense')
pkgdesc='X-ray Reference Data in SQLite library, including a Python interface'
source=("$pkgname-$pkgver.tar.gz::https://github.com/xraypy/XrayDB/archive/$pkgver.tar.gz")
sha512sums=('f8037f7793d7d6a68c158b591f91936dcc024b8e87e1bf21333316a83932e70f648838b1d79d9d2c91358a8baf98f19ad126e71fbdeb0474f83755484fc96f5f')
depends=(
  'python>=3.8'
  'python<3.9'
)
makedepends=(
  'python-setuptools'
)

build() {
  cd "XrayDB-$pkgver/python"
  python setup.py build
}

package() {
  cd "XrayDB-$pkgver/python"
  python setup.py install --root="$pkgdir"
}
