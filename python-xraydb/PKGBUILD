pkgname='python-xraydb'
pkgver=4.4.4
pkgrel=1
arch=('any')
url='https://github.com/xraypy/XrayDB'
license=('Unlicense')
pkgdesc='X-ray Reference Data in SQLite library, including a Python interface'
source=("$pkgname-$pkgver.tar.gz::https://github.com/xraypy/XrayDB/archive/$pkgver.tar.gz")
sha512sums=('5df95a29630e90661504da2b528ecb5f0e04c4ded0aec4bfcb370d14f0b96eb308cd62d677b15fb8561ea0d7ba5f71adff2b6a1f16899e775fb283c5aeec5c41')
depends=(
  'python>=3.8'
  'python<3.9'
)
makedepends=(
  'python-setuptools'
)

build() {
  cd "XrayDB-$pkgver/python"
  python setup.py build
}

package() {
  cd "XrayDB-$pkgver/python"
  python setup.py install --root="$pkgdir"
}
