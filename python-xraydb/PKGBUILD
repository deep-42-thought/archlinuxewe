pkgname='python-xraydb'
pkgver=4.3.3
pkgrel=1
arch=('any')
url='https://github.com/xraypy/XrayDB'
license=('Unlicense')
pkgdesc='X-ray Reference Data in SQLite library, including a Python interface'
source=("$pkgname-$pkgver.tar.gz::https://github.com/xraypy/XrayDB/archive/$pkgver.tar.gz")
sha512sums=('cfe2982e97bbd1cc232bdb244216081da9e09f7a7950679f12688be230d7ce911e2fe8fb6dc3e1c7851e63131519756e2ddfb2e5f52dfe1e559e369c02b152ca')
depends=(
  'python>=3.8'
  'python<3.9'
)
makedepends=(
  'python-setuptools'
)

build() {
  cd "XrayDB-$pkgver/python"
  python setup.py build
}

package() {
  cd "XrayDB-$pkgver/python"
  python setup.py install --root="$pkgdir"
}
