# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=gitolite-sync
pkgver=0.3
pkgrel=1
pkgdesc='synchronize git repositories (designed for gitolite managed ones)'
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
depends=('git')
makedepends=('help2man')
optdepends=('gitolite:  to manage the repositories')
backup=('etc/gitolite-sync.conf')
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('4d723cafddd744ce5bec43ed8c9f1c4a63ab5cd1acd0e7947dc830555b0a092aa876ff80d393dce280855b564237b08414a14ad617561a0d950edd04bfeaa5b9')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
