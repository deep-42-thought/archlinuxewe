pkgname='perl-http-tiny-mech'
pkgver='1.001001'
pkgrel='1'
pkgdesc='Wrap a WWW::Mechanize instance in an HTTP::Tiny compatible interface.'
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-http-tiny-mech')
depends=(
  'perl>=5.006'
  'perl-http-message'
  'perl-http-tiny>=0.022'
  'perl-parent'
  'perl-www-mechanize')
makedepends=(
  'perl-extutils-makemaker'
  'perl-http-message'
  'perl-http-tiny>=0.022'
