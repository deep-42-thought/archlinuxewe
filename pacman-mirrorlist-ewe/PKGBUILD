# $Id$
# Contributor: Dan McGee <dan@archlinux.org>
# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname=pacman-mirrorlist-ewe
pkgver=20190614
provides=("pacman-mirrorlist=${pkgver}")
conflicts=('pacman-mirrorlist')
provides=('pacman-mirrorlist')
pkgrel=1
pkgdesc="Arch Linux mirror list for use by pacman - ewe's favourites"
arch=('any')
url="https://www.archlinux.org/mirrorlist/"
license=('GPL')
backup=(etc/pacman.d/mirrorlist)
source=("https://arch.eckner.net/merged/core/os/$(uname -m)/${pkgname%-ewe}-${pkgver}-${pkgrel%%.*}-any.pkg.tar.xz")
sha512sums=('b7ed15b357096bdb8daba5e02434ada4f35f12d71a199a1703ae83449993ed4e9b71fdc218b75297bd6543ed0d90e71021ffd73a8a155d6b877e3475fa49fce3')

build() {
  sed -i '
    0,/^$/ {
      /^$/ i Server = https://arch.eckner.net/merged/$repo/os/$arch
    }
  ' 'etc/pacman.d/mirrorlist'
}

package() {
  mkdir -p "$pkgdir/etc/pacman.d"
  install -m644 'etc/pacman.d/mirrorlist' "$pkgdir/etc/pacman.d/"
}
