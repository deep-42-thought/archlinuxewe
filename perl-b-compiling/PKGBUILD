pkgname='perl-b-compiling'
pkgver='0.06'
pkgrel=11
pkgdesc='Expose PL_compiling to perl'
arch=('x86_64' 'i686' 'pentium4')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-sub-exporter'
  'perl-xsloader')
makedepends=(
  'perl-extutils-makemaker'
  'perl-test-simple')
checkdepends=(
  'perl-pod-coverage-trustpod'
  'perl-test-eol'
  'perl-test-notabs'
  'perl-test-pod'
  'perl-test-pod-coverage'
