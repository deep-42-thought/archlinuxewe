pkgname='perl-lingua-en-pluraltosingular'
pkgver=0.21
pkgrel=7
pkgdesc='change an English plural to a singular'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
)
makedepends=(
  'perl-extutils-makemaker'
)
url='https://metacpan.org/release/Lingua-EN-PluralToSingular'
_distdir="Lingua-EN-PluralToSingular-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/B/BK/BKB/${_distdir}.tar.gz")
