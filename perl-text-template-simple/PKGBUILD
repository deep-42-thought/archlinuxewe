pkgname='perl-text-template-simple'
pkgver='0.91'
pkgrel=3
pkgdesc='Simple text template engine'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=(
  'perl-devel-size>=0.77'
  'perl-perl-tidy'
  'perl-text-table>=1.107'
)
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
