pkgname='perl-net-ssh2'
pkgver=0.69
pkgrel='3'
pkgdesc='Support for the SSH 2 protocol via libssh2.'
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-net-ssh2-channel=0.69'
  'perl-net-ssh2-dir=0.69'
  'perl-net-ssh2-file=0.69'
  'perl-net-ssh2-knownhosts=0.69'
  'perl-net-ssh2-listener=0.69'
  'perl-net-ssh2-publickey=0.69'
  'perl-net-ssh2-sftp=0.69')
