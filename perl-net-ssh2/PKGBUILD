pkgname='perl-net-ssh2'
pkgver=0.68
pkgrel=1
pkgdesc='Support for the SSH 2 protocol via libssh2.'
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-net-ssh2-channel=0.68'
  'perl-net-ssh2-dir=0.68'
  'perl-net-ssh2-file=0.68'
  'perl-net-ssh2-knownhosts=0.68'
  'perl-net-ssh2-listener=0.68'
  'perl-net-ssh2-publickey=0.68'
  'perl-net-ssh2-sftp=0.68')
depends=(
  'perl>=5.6.0')
makedepends=(
  'perl-extutils-makemaker>=6.59')
url='https://metacpan.org/release/Net-SSH2'
_distdir="Net-SSH2-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/S/SA/SALVA/${_distdir}.tar.gz")
sha512sums=('5c1755afab6c251ed98ccece5eb1d932ec1643a27d7ac10d3c5fd1f199e267bc6e32acdddcec4d6f26f10f020cbd88de6d8b5d657b5f7fb919a931aa94331c70')

build() {
  cd "${srcdir}/${_distdir}"

  # Setting these env variables overwrites any command-line-options we don't want...
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='${pkgdir}'" \
    PERL_MB_OPT="--installdirs vendor --destdir '${pkgdir}'" \
    MODULEBUILDRC=/dev/null

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    perl Makefile.PL
    make
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build.PL
    perl Build
  fi
}

check() {
  cd "${srcdir}/${_distdir}"

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make test
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build test
  fi
}

package() {
  cd "${srcdir}/${_distdir}"

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make install
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build install
  fi

  # remove perllocal.pod and .packlist
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
