# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=cryptfs-daemon
pkgver=0.4.2
pkgrel=1
pkgdesc='shell script and systemd unit for (automatically) (un)mounting encrypted partitions'
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('cryptsetup')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('5db72fde1d79a08fe0217aae56637d645fed711bbf9313f5af97a588e3dec33865d027c020340ac950c1dedffbca75b47ea1a69f2a59e699ed48fff8126d3d65')

build() {

    cd "${pkgname}-${pkgver}"
    make CONF_PREFIXES='# cryptfs'

}

package() {

    cd "${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install_systemd

}
