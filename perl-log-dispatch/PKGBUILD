# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-log-dispatch'
pkgver='2.54'
pkgrel='1'
pkgdesc='Dispatches messages to one or more outputs'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl-dist-checkconflicts'
  'perl-devel-globaldestruction'
  'perl-module-runtime'
  'perl-params-validate'
)
checkdepends=(
  'perl-test-requires'
  'perl-ipc-run3'
  'perl-test-fatal'
)
url='https://metacpan.org/release/Log-Dispatch'
_distdir="Log-Dispatch-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/${_distdir}.tar.gz")
sha512sums=('67dd4bf15899fa441ecd725305b443873c77fcf8eeff44e53408637f81dc14c3375bdf52514214c111d1692a7087efb929ecdc411771dd413fef10bb034dc45b')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
