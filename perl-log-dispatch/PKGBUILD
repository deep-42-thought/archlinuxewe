# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-log-dispatch'
pkgver=2.62
pkgrel=1
pkgdesc='Dispatches messages to one or more outputs'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-log-dispatch-apachelog=2.62'
  'perl-log-dispatch-base=2.62'
  'perl-log-dispatch-code=2.62'
  'perl-log-dispatch-email=2.62'
  'perl-log-dispatch-email-mailsend=2.62'
  'perl-log-dispatch-email-mailsender=2.62'
  'perl-log-dispatch-email-mailsendmail=2.62'
  'perl-log-dispatch-email-mimelite=2.62'
  'perl-log-dispatch-file=2.62'
  'perl-log-dispatch-file-locked=2.62'
  'perl-log-dispatch-handle=2.62'
  'perl-log-dispatch-null=2.62'
  'perl-log-dispatch-output=2.62'
  'perl-log-dispatch-screen=2.62'
  'perl-log-dispatch-syslog=2.62'
  'perl-log-dispatch-types=2.62'
  'perl-log-dispatch-vars=2.62')
depends=(
  'perl>=5.6.0'
  'perl-base'
  'perl-carp'
  'perl-devel-globaldestruction'
  'perl-dist-checkconflicts>=0.02'
  'perl-encode'
  'perl-exporter'
  'perl-io'
  'perl-module-runtime'
  'perl-namespace-autoclean'
  'perl-params-validationcompiler'
  'perl-parent'
  'perl-scalar-list-utils'
  'perl-specio>=0.32'
  'perl-specio-declare'
  'perl-specio-exporter'
  'perl-specio-library-builtins'
  'perl-specio-library-numeric'
  'perl-specio-library-string'
  'perl-sys-syslog>=0.28'
  'perl-try-tiny')
makedepends=(
  'perl-data-dumper'
  'perl-extutils-makemaker'
  'perl-file-temp'
  'perl-getopt-long'
  'perl-ipc-run3'
  'perl-lib'
  'perl-pathtools'
  'perl-test-fatal'
  'perl-test-needs'
  'perl-test-simple>=0.96')
checkdepends=(
  'perl-test-requires'
  'perl-ipc-run3'
  'perl-test-fatal'
)
url='https://metacpan.org/release/Log-Dispatch'
_distdir="Log-Dispatch-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/${_distdir}.tar.gz")
sha512sums=('cc4ca40e62d2ec3caffabafcab187e8122c0316d2165c21057afa1ad0c15eba4dbd4b5152219a5886b1445ab9d9502f7502cecbc31850a9429f5c79189ca76ce')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

