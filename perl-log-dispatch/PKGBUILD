# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-log-dispatch'
pkgver=2.56
pkgrel='2'
pkgdesc='Dispatches messages to one or more outputs'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-log-dispatch-apachelog=2.56'
  'perl-log-dispatch-base=2.56'
  'perl-log-dispatch-code=2.56'
  'perl-log-dispatch-email=2.56'
  'perl-log-dispatch-email-mailsend=2.56'
  'perl-log-dispatch-email-mailsender=2.56'
  'perl-log-dispatch-email-mailsendmail=2.56'
  'perl-log-dispatch-email-mimelite=2.56'
  'perl-log-dispatch-file=2.56'
  'perl-log-dispatch-file-locked=2.56'
  'perl-log-dispatch-handle=2.56'
  'perl-log-dispatch-null=2.56'
  'perl-log-dispatch-output=2.56'
  'perl-log-dispatch-screen=2.56'
  'perl-log-dispatch-syslog=2.56'
  'perl-log-dispatch-vars=2.56')
depends=(
  'perl>=5.6.0'
  'perl-base'
  'perl-carp'
  'perl-devel-globaldestruction'
  'perl-dist-checkconflicts>=0.02'
  'perl-encode'
  'perl-exporter'
  'perl-io'
  'perl-module-runtime'
  'perl-params-validate>=1.03'
  'perl-scalar-list-utils'
  'perl-sys-syslog>=0.28')
makedepends=(
  'perl-data-dumper'
  'perl-extutils-makemaker'
  'perl-file-temp'
  'perl-getopt-long'
  'perl-ipc-run3'
  'perl-lib'
  'perl-pathtools'
  'perl-test-fatal'
  'perl-test-requires'
  'perl-test-simple>=0.96')
checkdepends=(
  'perl-test-requires'
  'perl-ipc-run3'
  'perl-test-fatal'
)
url='https://metacpan.org/release/Log-Dispatch'
_distdir="Log-Dispatch-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/${_distdir}.tar.gz")
sha512sums=('daac593ed158f7e648464fce5dd23485902c45339b70ddc78cc3c712744de30d981beeb5c646dda04290d409e3141f5ab5b0995aa34d048c41c97f70a4c25619')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

