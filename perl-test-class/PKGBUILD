options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-attribute-handlers>=0.77'
  'perl-carp'
  'perl-constant'
  'perl-module-runtime'
  'perl-mro-compat>=0.11'
  'perl-pathtools'
  'perl-storable>=2.04'
  'perl-test-simple>=1.02'
