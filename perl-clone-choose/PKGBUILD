pkgname='perl-clone-choose'
pkgver='0.008'
pkgrel='1'
pkgdesc='Choose appropriate clone utility'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=(
  'perl-module-runtime'
)
depends=(
  'perl>=5.8.1'
  'perl-storable'
)
makedepends=(
  'perl-extutils-makemaker'
  'perl-test-simple>=0.9'
)
