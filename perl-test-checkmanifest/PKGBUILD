pkgname='perl-test-checkmanifest'
pkgver='1.31'
pkgrel='1'
pkgdesc='Check if your Manifest matches your distro'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl'
  'perl-carp'
  'perl-pathtools'
  'perl-test-simple'
)
makedepends=(
  'perl-cpan-meta-yaml'
  'perl-extutils-makemaker'
)
url='https://metacpan.org/release/Test-CheckManifest'
_distdir="Test-CheckManifest-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/R/RE/RENEEB/${_distdir}.tar.gz")
sha512sums=('bebfd60107977f4242c4876fd9e5e8b13eb462218b9b409b1860d88b4eb2d1ffa56e9e54978df95c9fbd7ff2f2c05783f8222d16539ee4465fb4033e109d453f')

build() {
  cd "${srcdir}/${_distdir}"

  # Setting these env variables overwrites any command-line-options we don't want...
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='${pkgdir}'" \
    PERL_MB_OPT="--installdirs vendor --destdir '${pkgdir}'" \
    MODULEBUILDRC=/dev/null

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    perl Makefile.PL
    make
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build.PL
    perl Build
  fi
}

check() {
  cd "${srcdir}/${_distdir}"

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make test
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build test
  fi
}

package() {
  cd "${srcdir}/${_distdir}"

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make install
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build install
  fi

  # remove perllocal.pod and .packlist
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
