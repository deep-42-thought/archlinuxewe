pkgname='perl-test-checkmanifest'
pkgver=1.42
pkgrel=4
pkgdesc='Check if your Manifest matches your distro'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl-cpan-meta-yaml'
  'perl-extutils-makemaker'
  'perl-file-path'
  'perl-io'
  'perl-pod-coverage-trustpod')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-carp'
  'perl-data-dumper'
  'perl-pathtools>=3.75'
  'perl-scalar-list-utils'
