pkgname=sendmailadvanced
pkgver=1.0.5
pkgrel=1
pkgdesc="Wrapper for sendmail, which generates stamps and encrypts."
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('gnupg' 'hashcash')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/sendmailadvanced.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('b53fca34e93b6c4b1dbf97a9293352fa817f2ecdf3d27c3f861bab87020559a7512f38ec131a767f91eae20541dee13dd53d7525b253c9658118480fbfddd55c')

package() {

    cd ${pkgname}-${pkgver}

    install -D -t $pkgdir/usr/bin/ sendmailadvanced
    install -D -t $pkgdir/etc/ sendmailadvanced.conf

}
