# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sendmailadvanced
pkgver=1.7.5
pkgrel=1
pkgdesc="Wrapper for sendmail, which generates stamps and encrypts."
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('gnupg' 'hashcash')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/sendmailadvanced.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('9231e6798c1a499239852511c4e4a68a5689cf1ed9e33c9a7c1113a1f39edeac8c2204d2c0f9b92aa723adc08f01bc129efebafe4965caad5a60815e1fadb9f2')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
