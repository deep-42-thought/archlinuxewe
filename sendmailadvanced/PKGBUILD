# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sendmailadvanced
pkgver=1.7.4
pkgrel=1
pkgdesc="Wrapper for sendmail, which generates stamps and encrypts."
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('gnupg' 'hashcash')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/sendmailadvanced.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('87d62090a24e5251bd6efe9cf7a86931489c2700640391ae125420ca3fcff2d7925960d34a711fe0b03eb9c5882e6b38a81279e7a08486e430b4021e97da74eb')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
