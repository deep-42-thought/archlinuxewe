pkgname=sendmailadvanced
pkgver=1.0.9
pkgrel=1
pkgdesc="Wrapper for sendmail, which generates stamps and encrypts."
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('gnupg' 'hashcash')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/sendmailadvanced.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('96e5f10e7f467c9bd2c905e723e718e39c4a34a8990da283c1da94557e666864d6df99fa48842a576249e57caca86dd4b647d3deb5a3e1e6e58e4806c3408f5a')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
