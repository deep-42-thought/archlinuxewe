# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sendmailadvanced
pkgver=1.7
pkgrel=1
pkgdesc="Wrapper for sendmail, which generates stamps and encrypts."
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('gnupg' 'hashcash')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/sendmailadvanced.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('6b0759f923afd7d618d3789ad4c40d6ddc54e94f7d0a012d0099d20702fe6f7808d7cd899eac93961418ca9e49fe1f99a43c9e3c0117806b1e6f1d449f109ce6')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
