# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sendmailadvanced
pkgver=1.7.2
pkgrel=1
pkgdesc="Wrapper for sendmail, which generates stamps and encrypts."
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('gnupg' 'hashcash')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/sendmailadvanced.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('7b55a4f98377aab7d9f57e78740477caadd69e4d47a943d4970717d7c7e210016148ef4edf4781d38b39fc5b1272a72462aabc283b90fd1ac3a627affaf62a39')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
