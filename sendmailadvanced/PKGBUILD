# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sendmailadvanced
pkgver=1.7.8
pkgrel=1
pkgdesc="Wrapper for sendmail, which generates stamps and encrypts."
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('gnupg' 'hashcash')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/sendmailadvanced.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('c5183419b88d909496f1e2fa2dac5b2f616e7322d34ffe5bfa7631dbf5163a81169074b2a7f6b56e91b6c5e7e657740f10d816e3e8824b8d157cf61247ae64fc')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
