pkgname='perl-sys-info'
pkgver='0.7811'
pkgrel=4
pkgdesc='Fetch information from the host system'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple'
  'perl-test-sys-info>=0.20'
)
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-sys-info-base>=0.78'
)
