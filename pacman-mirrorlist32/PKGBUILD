# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname=pacman-mirrorlist32
pkgver=20170801
pkgrel=1
pkgdesc=$(printf '%s' 'Arch Linux mirror list for use by pacman for i68' '6 packages on an x86' '_64 host')
arch=('any')
url="https://www.archlinux32.org/"
license=('GPL')
backup=(etc/pacman.d/mirrorlist32)
source=($(printf '%s' "${pkgname}-${pkgver}-${pkgrel}-any-original.tar.xz::https://mirror.archlinux32.org/i6" "86/core/${pkgname%32}-${pkgver}-${pkgrel}-i686.pkg.tar.xz"))
sha512sums=('f51aa4fada17cb39ab4d1b1802338965bbf7f57aee494e7dc85e22c63497c7a261eeb9e07996aad9d40497c8f8a1c1618e797ce709ceb41b10a14e23a10ee226')

package() {
  mkdir -p $pkgdir/etc/pacman.d
  install -m644 $srcdir/etc/pacman.d/mirrorlist $pkgdir/etc/pacman.d/mirrorlist32
}
