pkgname='perl-complete-sah'
pkgver=0.006
pkgrel=1
pkgdesc='Sah-related completion routines'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-sah-schemas-int'
  'perl-test-exception'
  'perl-test-simple>=0.98')
