pkgname='perl-sah-schemas-rinci'
pkgver=1.1.90.0
pkgrel=1
pkgdesc='Sah schemas for Rinci'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple')
depends=(
  'perl'
  'perl-data-sah-normalize')
checkdepends=(
  'perl-pod-coverage-trustpod'
  'perl-test-pod'
  'perl-test-pod-coverage'
)
