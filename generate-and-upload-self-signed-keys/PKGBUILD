pkgname=generate-and-upload-self-signed-keys
pkgver=0.2
pkgrel=1
pkgdesc="Script to generate and upload self-signed keys"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('openssl' 'rsync' 'nginx')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=("etc/${pkgname}.conf")
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('50b75343d6995a2dcbc8be72278a0ba4708ff8e1120feac6f56a36d05ba3d501d868ba74f0a4fba097c324e9798da61febfdfdf48f6a84613a172fe70c51571d')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
