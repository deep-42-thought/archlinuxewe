# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=generate-and-upload-self-signed-keys
pkgver=0.1
pkgrel=1
pkgdesc="Script to generate and upload self-signed keys"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('openssl' 'rsync' 'nginx')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=("etc/${pkgname}.conf")
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('3ea3ed9f0e0a89b716c4b8e72b771e6d23dd55c916391789d2b50601db526d87ccde46f8567412049eb2c660a3bf99ec1651d6e82799ca3f3ee575ff36a174bc')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
