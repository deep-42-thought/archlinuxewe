# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=generate-and-upload-self-signed-keys
pkgver=0.0
pkgrel=1
pkgdesc="Script to generate and upload self-signed keys"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('openssl' 'rsync' 'nginx')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=("etc/${pkgname}.conf")
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('fb2187670c0768795549b8a3fc2ae5100dcbf920c84d7a25538ccc3946cc32c75508fdee1d3ba2652fe30835cd9d7e074874e7e243c62c27163a8967b4e40edf')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
