# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sound-cutter
pkgver=1.0.2
pkgrel=1
pkgdesc="Wrapper for sox for mastering stereo music (a.k.a. CDs) from multi channel records"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('sox')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('ddae3ca9cf331426a01a5a28a30efba6732bf194d56cd5c6645ba9ac9a40cde0eba3bff4d488c474d477c0ec7fd05a8a567516a1ec66dc5b2167f1acdf99c9c1')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
