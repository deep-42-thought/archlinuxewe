# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sound-cutter
pkgver=1.0.4
pkgrel=1
pkgdesc="Wrapper for sox for mastering stereo music (a.k.a. CDs) from multi channel records"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('sox')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('b7fd524ac6f96a5603b4ae3f78bd3dc88a6e93f5edb037360223ab1942df61719856cccb5599716220bc8d1a84a3a9c38aa9d994863413f896cbedd5e656992a')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
