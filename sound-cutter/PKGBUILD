# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sound-cutter
pkgver=1.0.1
pkgrel=1
pkgdesc="Wrapper for sox for mastering stereo music (a.k.a. CDs) from multi channel records"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('sox')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('63b7a86f94808787cc2fd7415abfed80269bb0acc8daad7809068c4e38327493ae9e4cdfc7a98e54d4f40b70b4dc092f24b8967989933f88543ae1328b85f37e')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
