# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sound-cutter
pkgver=1.0.6
pkgrel=1
pkgdesc="Wrapper for sox for mastering stereo music (a.k.a. CDs) from multi channel records"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('sox')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('50b66e00c49dc7919c5ea1f8d171acb3212b21ab472d2cb431ccf3b6a694202d6710e0cf01037fd25db84fc873e25ba285178b92a6832893e9c4b9e35c0d2b74')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
