# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=sound-cutter
pkgver=1.0.3
pkgrel=1
pkgdesc="Wrapper for sox for mastering stereo music (a.k.a. CDs) from multi channel records"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('sox')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('047185bed9f46ea4d4aa6429e1afa1acec0b1c0ae35939ac6318a3ed9c888de33a43aeefb80711ef9da7c51d46c08a811e66ac1749c998e914edf2d232c358a3')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
