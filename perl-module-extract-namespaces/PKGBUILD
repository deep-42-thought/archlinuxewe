pkgname='perl-module-extract-namespaces'
pkgver=1.021
pkgrel=4
pkgdesc='extract the package declarations from a module'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.30'
  'perl<5.31'
  'perl-ppi>=1.126')
makedepends=(
  'perl-extutils-makemaker>=6.64'
  'perl-pathtools'
  'perl-test-simple>=0.94')
checkdepends=(
  'perl-test-pod'
  'perl-test-pod-coverage'
)
