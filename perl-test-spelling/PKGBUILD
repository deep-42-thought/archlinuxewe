pkgname='perl-test-spelling'
pkgver='0.20'
pkgrel=8
pkgdesc='check for spelling errors in POD files'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-ipc-run3>=0.044'
  'perl-pod-spell>=1.01'
)
makedepends=(
  'perl-extutils-makemaker>=6.59'
  'perl-test-simple>=0.88'
  'perl-module-install'
)
