# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=save-time
pkgver=0.1
pkgrel=1
pkgdesc="Simple script for saving system time across reboots"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('5ce9d5162df4584749eb2ed8db66b8f6d2e594d1580913675159c4253e2e20a6c07708b37599c01a4199dade4e943bef94d332b27987a53f44c2ad1d5f80e7f2')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
