pkgname='perl-class-trigger'
pkgver='0.14'
pkgrel=4
pkgdesc='Mixin to add / call inheritable triggers'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.30'
  'perl<5.31'
  'perl-filter-util-call'
)
makedepends=(
  'perl-extutils-makemaker>=6.42'
  'perl-io-stringy'
  'perl-module-install'
  'perl-test-simple>=0.32'
)
