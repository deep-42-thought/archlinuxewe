pkgname='perl-lwp-consolelogger'
pkgver=0.000032
pkgrel=1
pkgdesc='Easy LWP tracing and debugging'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=(
  'perl-html-formattext-lynx>=23')
depends=(
  'perl>=5.13.10'
  'perl-data-printer>=0.36'
  'perl-datetime'
  'perl-html-restrict'
  'perl-http-body'
  'perl-http-cookiemonster'
  'perl-json-maybexs>=1.003005'
  'perl-list-allutils'
  'perl-log-dispatch>=2.56'
  'perl-module-load-conditional'
  'perl-moo'
  'perl-moox-strictconstructor'
  'perl-parse-mime'
  'perl-string-trim'
  'perl-sub-exporter'
  'perl-term-size-any'
  'perl-text-simpletable-autowidth>=0.09'
  'perl-try-tiny'
  'perl-types-common-numeric'
  'perl-types-standard'
  'perl-uri'
  'perl-uri-query'
  'perl-xml-simple')
makedepends=(
  'perl-extutils-makemaker'
  'perl-html-formattext-withlinks'
  'perl-http-message'
  'perl-libwww'
  'perl-log-dispatch-array'
  'perl-path-tiny'
  'perl-plack'
  'perl-plack-handler-http-server-simple>=0.016'
  'perl-plack-test-agent'
  'perl-test-failwarnings'
  'perl-test-fatal'
  'perl-test-lwp-useragent'
  'perl-test-most'
  'perl-test-needs'
  'perl-test-requiresinternet'
  'perl-test-simple'
  'perl-www-mechanize')
checkdepends=(
  'perl-datetime'
  'perl-html-formattext-withlinks'
  'perl-path-tiny'
  'perl-log-dispatch-array'
  'perl-test-most'
  'perl-http-server-simple-psgi'
  'perl-plack'
  'perl-plack-test-agent'
  'perl-test-failwarnings'
  'perl-json-maybexs'
  'perl-cgi'
  'perl-file-which')
url='https://metacpan.org/release/LWP-ConsoleLogger'
_distdir="LWP-ConsoleLogger-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/O/OA/OALDERS/${_distdir}.tar.gz")
sha512sums=('340d371ed7493c7444dae1e2141c718949bc7d3c83baf1948de4843ad4b86d8f2e63f8a910d46de4bbb31ae020f1cb4bca60a152f278f65bc8df09520249967e')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

