pkgver=0.470
pkgrel=3
pkgdesc='Helper when writing functions'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl-extutils-makemaker'
  'perl-gen-test-rinci-funcresult'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple>=0.98')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-carp>=1.12'
  'perl-exporter>=5.57'
  'perl-function-fallback-coreorpp'
