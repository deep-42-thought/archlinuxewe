pkgname='perl-test-file'
pkgver='1.443'
pkgrel='1'
pkgdesc='test file attributes'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.8.0'
)
makedepends=(
  'perl-extutils-makemaker>=6.64'
  'perl-pathtools'
  'perl-test-simple>=1.001006'
  'perl-test-utf8'
)
checkdepends=(
  'perl-test-pod-coverage'
)
url='https://metacpan.org/release/Test-File'
_distdir="Test-File-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/B/BD/BDFOY/${_distdir}.tar.gz")
