# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-specio'
pkgver=0.35
pkgrel=1
pkgdesc='Type constraints and coercions for Perl'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-specio-coercion=0.35'
  'perl-specio-constraint-anycan=0.35'
  'perl-specio-constraint-anydoes=0.35'
  'perl-specio-constraint-anyisa=0.35'
  'perl-specio-constraint-enum=0.35'
  'perl-specio-constraint-intersection=0.35'
  'perl-specio-constraint-objectcan=0.35'
  'perl-specio-constraint-objectdoes=0.35'
  'perl-specio-constraint-objectisa=0.35'
  'perl-specio-constraint-parameterizable=0.35'
  'perl-specio-constraint-parameterized=0.35'
  'perl-specio-constraint-role-cantype=0.35'
  'perl-specio-constraint-role-doestype=0.35'
  'perl-specio-constraint-role-interface=0.35'
  'perl-specio-constraint-role-isatype=0.35'
  'perl-specio-constraint-simple=0.35'
  'perl-specio-constraint-structurable=0.35'
  'perl-specio-constraint-structured=0.35'
  'perl-specio-constraint-union=0.35'
  'perl-specio-declare=0.35'
  'perl-specio-declaredat=0.35'
  'perl-specio-exception=0.35'
  'perl-specio-exporter=0.35'
  'perl-specio-helpers=0.35'
  'perl-specio-library-builtins=0.35'
  'perl-specio-library-numeric=0.35'
  'perl-specio-library-perl=0.35'
  'perl-specio-library-string=0.35'
  'perl-specio-library-structured=0.35'
  'perl-specio-library-structured-dict=0.35'
  'perl-specio-library-structured-map=0.35'
  'perl-specio-library-structured-tuple=0.35'
  'perl-specio-oo=0.35'
  'perl-specio-partialdump=0.35'
  'perl-specio-registry=0.35'
  'perl-specio-role-inlinable=0.35'
  'perl-specio-subs=0.35'
  'perl-specio-typechecks=0.35'
  'perl-test-specio=0.35')
optdepends=(
  'perl-ref-util>=0.112'
  'perl-sub-util>=1.40')
depends=(
  'perl>=5.8.0'
  'perl-carp'
  'perl-devel-stacktrace'
  'perl-eval-closure'
  'perl-exporter'
  'perl-io'
  'perl-module-runtime'
  'perl-mro-compat'
  'perl-parent'
  'perl-role-tiny>=1.003003'
  'perl-scalar-list-utils>=1.33'
  'perl-storable'
  'perl-test-fatal'
  'perl-test-simple>=0.96'
  'perl-version>=0.83')
makedepends=(
  'perl-extutils-makemaker'
  'perl-lib'
  'perl-pathtools'
  'perl-test-needs')
checkdepends=(
  'perl-test-requires'
  'perl-test-fatal'
  'perl-namespace-autoclean'
  'perl-moose'
)
url='https://metacpan.org/release/Specio'
_distdir="Specio-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/${_distdir}.tar.gz")
sha512sums=('1a765e7bb2d6b8ddfd18a6cc75108a9237f63acba929c8b94767f336932626a4afb64a4aec96c3a7d518764df6456051fbea4d337a3ce79c9bea25579cca7015')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

