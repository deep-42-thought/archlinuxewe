# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-specio'
pkgver=0.26
pkgrel=1
pkgdesc='Type constraints and coercions for Perl'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-specio-coercion=0.26'
  'perl-specio-constraint-anycan=0.26'
  'perl-specio-constraint-anydoes=0.26'
  'perl-specio-constraint-anyisa=0.26'
  'perl-specio-constraint-enum=0.26'
  'perl-specio-constraint-intersection=0.26'
  'perl-specio-constraint-objectcan=0.26'
  'perl-specio-constraint-objectdoes=0.26'
  'perl-specio-constraint-objectisa=0.26'
  'perl-specio-constraint-parameterizable=0.26'
  'perl-specio-constraint-parameterized=0.26'
  'perl-specio-constraint-role-cantype=0.26'
  'perl-specio-constraint-role-doestype=0.26'
  'perl-specio-constraint-role-interface=0.26'
  'perl-specio-constraint-role-isatype=0.26'
  'perl-specio-constraint-simple=0.26'
  'perl-specio-constraint-union=0.26'
  'perl-specio-declare=0.26'
  'perl-specio-declaredat=0.26'
  'perl-specio-exception=0.26'
  'perl-specio-exporter=0.26'
  'perl-specio-helpers=0.26'
  'perl-specio-library-builtins=0.26'
  'perl-specio-library-numeric=0.26'
  'perl-specio-library-perl=0.26'
  'perl-specio-library-string=0.26'
  'perl-specio-oo=0.26'
  'perl-specio-partialdump=0.26'
  'perl-specio-registry=0.26'
  'perl-specio-role-inlinable=0.26'
  'perl-specio-typechecks=0.26')
depends=(
  'perl>=5.8.0'
  'perl-carp'
  'perl-devel-stacktrace'
  'perl-eval-closure'
  'perl-exporter'
  'perl-mro-compat'
  'perl-parent'
  'perl-role-tiny>=1.003003'
  'perl-scalar-list-utils>=1.33'
  'perl-storable'
  'perl-test-simple>=0.96'
  'perl-version>=0.83')
makedepends=(
  'perl-extutils-makemaker'
  'perl-io'
  'perl-lib'
  'perl-pathtools'
  'perl-test-fatal'
  'perl-test-needs')
checkdepends=(
  'perl-test-requires'
  'perl-test-fatal'
  'perl-namespace-autoclean'
  'perl-moose'
)
url='https://metacpan.org/release/Specio'
_distdir="Specio-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/${_distdir}.tar.gz")
sha512sums=('cc8cc767088363bcd7fe62f49854ac872e78ee0ab6e9090014b22700b44485e31f6515bdbff93dcd231b6577afd607a063ea88ab4ebeba2146f8c5854db2f6ab')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
