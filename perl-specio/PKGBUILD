# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-specio'
pkgver=0.34
pkgrel=1
pkgdesc='Type constraints and coercions for Perl'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-specio-coercion=0.34'
  'perl-specio-constraint-anycan=0.34'
  'perl-specio-constraint-anydoes=0.34'
  'perl-specio-constraint-anyisa=0.34'
  'perl-specio-constraint-enum=0.34'
  'perl-specio-constraint-intersection=0.34'
  'perl-specio-constraint-objectcan=0.34'
  'perl-specio-constraint-objectdoes=0.34'
  'perl-specio-constraint-objectisa=0.34'
  'perl-specio-constraint-parameterizable=0.34'
  'perl-specio-constraint-parameterized=0.34'
  'perl-specio-constraint-role-cantype=0.34'
  'perl-specio-constraint-role-doestype=0.34'
  'perl-specio-constraint-role-interface=0.34'
  'perl-specio-constraint-role-isatype=0.34'
  'perl-specio-constraint-simple=0.34'
  'perl-specio-constraint-structurable=0.34'
  'perl-specio-constraint-structured=0.34'
  'perl-specio-constraint-union=0.34'
  'perl-specio-declare=0.34'
  'perl-specio-declaredat=0.34'
  'perl-specio-exception=0.34'
  'perl-specio-exporter=0.34'
  'perl-specio-helpers=0.34'
  'perl-specio-library-builtins=0.34'
  'perl-specio-library-numeric=0.34'
  'perl-specio-library-perl=0.34'
  'perl-specio-library-string=0.34'
  'perl-specio-library-structured=0.34'
  'perl-specio-library-structured-dict=0.34'
  'perl-specio-library-structured-map=0.34'
  'perl-specio-library-structured-tuple=0.34'
  'perl-specio-oo=0.34'
  'perl-specio-partialdump=0.34'
  'perl-specio-registry=0.34'
  'perl-specio-role-inlinable=0.34'
  'perl-specio-typechecks=0.34'
  'perl-test-specio=0.34')
optdepends=(
  'perl-ref-util>=0.112')
depends=(
  'perl>=5.8.0'
  'perl-carp'
  'perl-devel-stacktrace'
  'perl-eval-closure'
  'perl-exporter'
  'perl-io'
  'perl-mro-compat'
  'perl-parent'
  'perl-role-tiny>=1.003003'
  'perl-scalar-list-utils>=1.33'
  'perl-storable'
  'perl-test-fatal'
  'perl-test-simple>=0.96'
  'perl-version>=0.83')
makedepends=(
  'perl-extutils-makemaker'
  'perl-lib'
  'perl-pathtools'
  'perl-test-needs')
checkdepends=(
  'perl-test-requires'
  'perl-test-fatal'
  'perl-namespace-autoclean'
  'perl-moose'
)
url='https://metacpan.org/release/Specio'
_distdir="Specio-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/${_distdir}.tar.gz")
sha512sums=('55c00843a7d9699be8943ecd914e24d8249d4c96088caf70d7b41b4a3f3603d2835640c4b6e54ba37bc080da740ed3d3d791c231f54040b674be22fe05d0d50d')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

