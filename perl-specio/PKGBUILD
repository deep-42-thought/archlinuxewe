# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-specio'
pkgver=0.30
pkgrel=1
pkgdesc='Type constraints and coercions for Perl'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-specio-coercion=0.30'
  'perl-specio-constraint-anycan=0.30'
  'perl-specio-constraint-anydoes=0.30'
  'perl-specio-constraint-anyisa=0.30'
  'perl-specio-constraint-enum=0.30'
  'perl-specio-constraint-intersection=0.30'
  'perl-specio-constraint-objectcan=0.30'
  'perl-specio-constraint-objectdoes=0.30'
  'perl-specio-constraint-objectisa=0.30'
  'perl-specio-constraint-parameterizable=0.30'
  'perl-specio-constraint-parameterized=0.30'
  'perl-specio-constraint-role-cantype=0.30'
  'perl-specio-constraint-role-doestype=0.30'
  'perl-specio-constraint-role-interface=0.30'
  'perl-specio-constraint-role-isatype=0.30'
  'perl-specio-constraint-simple=0.30'
  'perl-specio-constraint-union=0.30'
  'perl-specio-declare=0.30'
  'perl-specio-declaredat=0.30'
  'perl-specio-exception=0.30'
  'perl-specio-exporter=0.30'
  'perl-specio-helpers=0.30'
  'perl-specio-library-builtins=0.30'
  'perl-specio-library-numeric=0.30'
  'perl-specio-library-perl=0.30'
  'perl-specio-library-string=0.30'
  'perl-specio-oo=0.30'
  'perl-specio-partialdump=0.30'
  'perl-specio-registry=0.30'
  'perl-specio-role-inlinable=0.30'
  'perl-specio-typechecks=0.30'
  'perl-test-specio=0.30')
depends=(
  'perl>=5.8.0'
  'perl-carp'
  'perl-devel-stacktrace'
  'perl-eval-closure'
  'perl-exporter'
  'perl-io'
  'perl-mro-compat'
  'perl-parent'
  'perl-role-tiny>=1.003003'
  'perl-scalar-list-utils>=1.33'
  'perl-storable'
  'perl-test-fatal'
  'perl-test-simple>=0.96'
  'perl-version>=0.83')
makedepends=(
  'perl-extutils-makemaker'
  'perl-lib'
  'perl-pathtools'
  'perl-test-needs')
checkdepends=(
  'perl-test-requires'
  'perl-test-fatal'
  'perl-namespace-autoclean'
  'perl-moose'
)
url='https://metacpan.org/release/Specio'
_distdir="Specio-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/${_distdir}.tar.gz")
sha512sums=('b50fe53e39502e6c82ae7dd0765569f98d32f11913012525c12608f22639889cf6d33dc028bf9ade0da262e495b3440fe6528fade29a411764a9c2e6e430204a')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

