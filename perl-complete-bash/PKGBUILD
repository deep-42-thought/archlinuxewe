pkgname='perl-complete-bash'
pkgver=0.327
pkgrel=1
pkgdesc='Completion routines for bash shell'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=(
  'perl'
  'perl-file-which'
  'perl-term-size')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-exception'
  'perl-test-simple>=0.98')
depends=(
  'perl>=5.10.1'
  'perl-exporter>=5.57'
  'perl-log-ger>=0.027')
