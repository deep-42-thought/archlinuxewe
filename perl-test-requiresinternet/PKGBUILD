# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-test-requiresinternet'
pkgver='0.05'
pkgrel='2'
pkgdesc='Easily test network connectivity'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl-socket')
makedepends=(
  'perl-extutils-makemaker'
  'perl-test-simple')
checkdepends=()
url='https://metacpan.org/release/Test-RequiresInternet'
_distdir="Test-RequiresInternet-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/M/MA/MALLEN/${_distdir}.tar.gz")
sha512sums=('572af3e6fdfb90df3a58ba6eaf571717b294a54fff4b3f597fd177f1eb91fb1c929cb808f8d219f692314a944cf41dc1afab41f5a0dd2185054c08fec69e66c3')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
