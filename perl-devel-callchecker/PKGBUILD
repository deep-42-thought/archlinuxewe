pkgver=0.008
pkgrel='4'
pkgdesc='custom op checking attached to subroutines'
arch=('x86_64' 'i686' 'pentium4')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.28'
  'perl<5.29'
  'perl-dynaloader-functions>=0.001'
  'perl-exporter'
  'perl-parent')
makedepends=(
