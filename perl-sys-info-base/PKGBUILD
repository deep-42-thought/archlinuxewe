pkgname='perl-sys-info-base'
pkgver='0.7807'
pkgrel='1'
pkgdesc='Base class for Sys::Info'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl-extutils-makemaker'
  'perl-pathtools'
  'perl-test-simple'
)
depends=(
  'perl>=5.10.0'
  'perl-text-template-simple'
)
