pkgname='perl-time-piece-mysql'
pkgver='0.06'
pkgrel='3'
pkgdesc='Adds MySQL-specific methods to Time::Piece'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.28'
  'perl<5.29'
  'perl-test-simple>=0.47'
  'perl-time-piece>=1.03'
)
url='https://metacpan.org/release/Time-Piece-MySQL'
_distdir="Time-Piece-MySQL-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/K/KA/KASEI/${_distdir}.tar.gz")
