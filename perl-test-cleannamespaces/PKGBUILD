pkgname='perl-test-cleannamespaces'
pkgver=0.22
pkgrel='2'
pkgdesc="Check for uncleaned imports"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-exporter>=5.57'
  'perl-module-runtime'
  'perl-package-stash>=0.14'
  'perl-pathtools'
  'perl-sub-identify'
  'perl-test-simple')
makedepends=(
  'perl-constant'
  'perl-cpan-meta-requirements>=2.120.620'
  'perl-extutils-makemaker'
  'perl-file-pushd'
  'perl-if'
  'perl-lib'
  'perl-module-metadata'
  'perl-namespace-clean'
  'perl-parent'
  'perl-scalar-list-utils'
  'perl-sub-exporter'
  'perl-test-deep'
  'perl-test-needs'
  'perl-test-simple>=0.88'
  'perl-test-tester'
  'perl-test-warnings>=0.009')
optdepends=(
  'perl-package-stash-xs')
checkdepends=('perl-moo' 'perl-moose' 'perl-mouse' 'perl-moosex-role-parameterized')
url='http://search.mcpan.org/dist/Test-CleanNamespaces'
source=("http://search.mcpan.org/CPAN/authors/id/E/ET/ETHER/Test-CleanNamespaces-${pkgver}.tar.gz")
sha512sums=('9ccb456aa502421e7fe4a5b91f629596cff04fdee2211288e4b8b3b2faeb1a9049d31e2a5ca4ce332914759ffa35d8027a1ccdcd157618e99545cb071d8797cc')
_distdir="Test-CleanNamespaces-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

