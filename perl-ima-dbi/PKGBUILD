pkgname='perl-ima-dbi'
pkgver='0.35'
pkgrel=4
pkgdesc='Database connection caching and organization'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.30'
  'perl<5.31'
  'perl-class-data-inheritable>=0.02'
  'perl-dbi>=1.2'
  'perl-dbix-contextualfetch>=1'
  'perl-test-simple>=0.18'
)
