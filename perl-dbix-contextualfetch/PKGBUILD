pkgver='1.03'
pkgrel=7
pkgdesc='Add contextual fetches to DBI'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-dbi>=1.35'
  'perl-test-simple>=0.11'
)
