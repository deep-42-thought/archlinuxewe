pkgname='perl-sah-schemas-collection'
pkgver=0.008
pkgrel=1
pkgdesc='Various Sah collection (array/hash) schemas'
arch=('any')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple')
depends=(
  'perl')
license=('PerlArtistic' 'GPL')
