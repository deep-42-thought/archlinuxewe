pkgname='perl-perinci-sub-depchecker'
pkgver='0.11'
pkgrel='3'
pkgdesc='Check dependencies from '"'"'deps'"'"' property'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.10.1'
  'perl-experimental'
  'perl-file-which'
)
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple>=0.98'
)
checkdepends=(
  'perl-pod-coverage-trustpod'
  'perl-test-pod'
  'perl-test-pod-coverage'
  'perl-test-rinci'
  'perl-test-simple'
)
