pkgname=logwatch-extra
pkgver=0.4
pkgrel=1
pkgdesc="extra-capabilities for logwatch: better cron-frontend"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('logwatch')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('var/cache/logwatch/letzteMeldung')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('cbebb5ef250aacf3adfdfe938d6710b2a510795a59572eb0386407133daab06ec32908ed9f05e7f72b66f92dfc634b1942b5974e36dfff1124768f75f36abb6f')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
