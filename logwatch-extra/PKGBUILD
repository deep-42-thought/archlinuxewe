pkgname=logwatch-extra
pkgver=0.3
pkgrel=1
pkgdesc="extra-capabilities for logwatch: better cron-frontend"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('logwatch')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('var/cache/logwatch/letzteMeldung')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('8bb4352bc43f4677f755df655995fefa956be67f601fc71bc225ff615989cb101ad3fb05ab5477b6e6635cb8fcd6d6a8850373e080447c2fa8b6dfb360496466')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
