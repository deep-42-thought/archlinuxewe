pkgname=logwatch-extra
pkgver=0.6
pkgrel=1
pkgdesc="extra-capabilities for logwatch: better cron-frontend"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('logwatch')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('b7eb6753a57e7d52ca1cf8df3c30ac22fc757d26f314457fb38728399dfe136b9c754efb6aa4f98965268fb6cf636c8d13401da17fe889170113805dddc83b2b')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
