pkgname=logwatch-extra
pkgver=0.5
pkgrel=1
pkgdesc="extra-capabilities for logwatch: better cron-frontend"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('logwatch')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('a3ca4267e1ad2fff0295b17f6be3361858fb83127ffaa8d8168e2f557390ce5a0d0703b2a76c48081487b19e25c1593e56ae201641b26c38b952e2ebabcdc5d0')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
