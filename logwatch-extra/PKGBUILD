pkgname=logwatch-extra
pkgver=0.2
pkgrel=1
pkgdesc="extra-capabilities for logwatch: better cron-frontend"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('logwatch')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('var/cache/logwatch/letzteMeldung')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('7a0cb57d4ffd90afa19da134d8fd30627795e88bbb37ea09ea5efa3381c9e9c23c29b7be612dcf7320934f4ad7edb7567142436650f86a7ef790e0039ba889a2')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
