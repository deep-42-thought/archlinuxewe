pkgname=python-pamela
pkgver=0.2.1
pkgrel=1
pkgdesc="Python PAM interface"
arch=('any')
url="https://github.com/minrk/pamela"
license=('MIT')
depends=('pam' 'python')
source=("https://github.com/minrk/pamela/archive/${pkgver}.tar.gz")
sha512sums=('610112db6c5b9e833fd9ee91a3e17e00f5da57d7dd2a775924ee0d75cc64b6a0177c874f3ba0c2e64b3229b4674bd868665be58b54b623ca64ba988c0da2d408')

package() {
  cd "$srcdir/pamela-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

