prepare() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's!usr/games!usr/bin!' Makefile
}

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
  install -Dm644 ../qxw-guide-${pkgver}.pdf $pkgdir/usr/share/doc/$pkgname/qxw-guide-${pkgver}.pdf
}

