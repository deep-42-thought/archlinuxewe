pkgname=qxw
pkgver=20200708
pkgrel=2
epoch=
pkgdesc="A program to help you create and publish crosswords."
arch=('i686' 'pentium4' 'x86_64')
url="https://www.quinapalus.com/qxw.html"
license=('GPL')
_pinned_dependencies=(
  'cairo=1.17.2+25+gaee96d175'
  'glibc>=2.31'
  'libatk-1.0.so=0'
  'libfontconfig.so=1'
  'libfreetype.so=6'
  'libgdk_pixbuf-2.0.so=0'
  'libgdk-x11-2.0.so=0'
  'libgio-2.0.so=0'
