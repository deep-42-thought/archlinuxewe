pkgname='perl-devel-confess'
pkgver=0.009004
pkgrel='5'
pkgdesc='Include stack traces on all warnings and errors'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-carp'
  'perl-scalar-list-utils')
makedepends=(
  'perl-extutils-makemaker'
  'perl-file-temp'
  'perl-pathtools'
  'perl-safe'
  'perl-test-simple')
checkdepends=(
  'perl-universal-can'
  'perl-universal-isa')
