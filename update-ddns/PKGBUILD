# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-ddns
pkgver=0.1.4
pkgrel=1
pkgdesc="Script to update freedns.afraid.org's ddns entries if necessary"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('curl' 'iproute2' 'bind-tools')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-ddns.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('ce9f9a198894b3465caed0b37c962e0273227573b0ad7be2a40283b533743b5bf56b3681a82290ba5267628ad3953cb59870b4a82c32423baeca1f173dc3e093')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
