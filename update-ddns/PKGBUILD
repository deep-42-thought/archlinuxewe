# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-ddns
pkgver=0.1.2
pkgrel=1
pkgdesc="Script to update freedns.afraid.org's ddns entries if necessary"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('curl' 'iproute2' 'bind-tools')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-ddns.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('172747450ce6cedabbe2ba69fd1605cff4a3e87e9d9b7425bddecca0763bacfa72db42897952104495d384e4febcd07717663e8b8d4c53c57fc07d5a0c93056c')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
