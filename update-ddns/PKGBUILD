# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-ddns
pkgver=0.1.3
pkgrel=1
pkgdesc="Script to update freedns.afraid.org's ddns entries if necessary"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('curl' 'iproute2' 'bind-tools')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-ddns.conf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('737e9739da11e804a0759a5ce269e8796a812c68e6b3d529d3f9bdd5a5eb67720a4325af0fbebe61fa677d13256c859d7bfabd077d4475ff330f520cb8e72b1b')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
