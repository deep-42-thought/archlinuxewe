# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=update-ddns
pkgver=0.3
pkgrel=1
pkgdesc="Script to update freedns.afraid.org's ddns entries if necessary"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
groups=()
depends=('curl' 'iproute2' 'bind-tools')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/update-ddns.conf')
options=()
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('de39dafee9a7111fffa18305696f9e721b6fdcc659bb028e60bab2473ce0b6a4fb4f46fbb51680d0a81be96ede6eacced4a5aaaf89be73434aed5a24aba75947')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
