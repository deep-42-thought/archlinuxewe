pkgname='perl-class-c3'
pkgver='0.33'
pkgrel='1'
pkgdesc='A pragma to use the C3 method resolution order algorithm'
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-algorithm-c3>=0.07'
  'perl-scalar-list-utils'
)
makedepends=(
  'perl-extutils-makemaker'
  'perl-test-simple>=0.47'
)
