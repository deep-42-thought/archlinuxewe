pkgname='perl-string-rewriteprefix'
pkgver=0.008
pkgrel=4
pkgdesc='rewrite strings based on a set of known prefixes'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl-extutils-makemaker'
  'perl-pathtools'
  'perl-test-simple>=0.96')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl'
  'perl-carp'
  'perl-sub-exporter>=0.972')
url='https://metacpan.org/release/String-RewritePrefix'
_distdir="String-RewritePrefix-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/R/RJ/RJBS/${_distdir}.tar.gz")
