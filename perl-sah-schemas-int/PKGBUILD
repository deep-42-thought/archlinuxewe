pkgname='perl-sah-schemas-int'
pkgver=0.075
pkgrel=2
pkgdesc='Sah schemas for various integers'
arch=('any')
makedepends=(
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl')
