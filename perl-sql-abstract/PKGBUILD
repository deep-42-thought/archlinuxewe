pkgname='perl-sql-abstract'
pkgver=1.85
pkgrel=1
pkgdesc='Generate SQL from Perl data structures'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-exporter>=5.57'
  'perl-hash-merge>=0.12'
  'perl-moo>=2.000001'
  'perl-mro-compat>=0.12'
  'perl-scalar-list-utils'
  'perl-text-balanced>=2.00')
