pkgname='perl-devel-findperl'
pkgver='0.014'
pkgrel='1'
pkgdesc='Find the path to your perl'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=(
  'perl-extutils-config>=0.007'
)
depends=(
  'perl>=5.6.0'
  'perl-carp'
  'perl-exporter>=5.57'
  'perl-pathtools'
  'perl-scalar-list-utils'
)
makedepends=(
  'perl-extutils-makemaker'
  'perl-test-simple'
)
