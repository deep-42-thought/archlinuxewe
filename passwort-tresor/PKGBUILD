pkgname=passwort-tresor
pkgver=0.1
pkgrel=1
pkgdesc="Wrapper for gpg to store passwords (and other text)"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('gnupg')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/passwort-tresor.konf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('e40a3d814a4282d992a1faa591f0775347bb5c1fb706b57bc74c716d611c17da908ab76a39f72cf60e4aa8a282d558aacd01bd6e34d1bde396a443bff2963e35')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
