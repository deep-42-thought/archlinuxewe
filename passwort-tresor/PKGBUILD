pkgname=passwort-tresor
pkgver=0.2
pkgrel=1
pkgdesc="Wrapper for gpg to store passwords (and other text)"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('gnupg')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/passwort-tresor.konf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('2840fdab4823c4de282525d3df30543b34f0ce6e658cfb121882b68150a5745442fe8b3c9f99d5f28562815126b40695ea3e6e23dede0efc66db585a8503323f')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
