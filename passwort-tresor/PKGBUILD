pkgname=passwort-tresor
pkgver=0.6
pkgrel=1
pkgdesc="Wrapper for gpg to store passwords (and other text)"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=('gnupg')
makedepends=('help2man')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/passwort-tresor.konf')
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('dc83e5515888047332d9add505543e94589ae98648058a3899093b4a0a915b9cd09e4ce2e8610114e6101a6982282df088c661539f7ddf070938c45f6c4f363e')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
