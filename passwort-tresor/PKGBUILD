# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=passwort-tresor
pkgver=0.7
pkgrel=1
pkgdesc="Wrapper for gpg to store passwords (and other text)"
arch=('any')
url="https://git.eckner.net/Erich/${pkgname}"
license=('GPL')
depends=('pass')
makedepends=('help2man')
source=(
    "https://git.eckner.net/Erich/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.xz"
)
sha512sums=('c20edd79bc590317f6d9697d45a56e001f7336f2edf3f2aaf186da26a784e15c35bc96c9bd1f134837dd1103eb15adf3080953daf3d9dd56e6da844a87e5f4ad')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
