# Contributor: Pierre Schmitz <pierre@archlinux.de>

# repo: releng

_target_arch=$(printf '%s' i 6 8 6)

pkgname=archiso32
pkgver=34
pkgrel=1
pkgdesc='Tools for creating Arch Linux live and install iso images - for '"${_target_arch}"
arch=('any')
license=('GPL')
url='https://github.com/archlinux32/archiso32'
depends=('make' 'arch-install-scripts' 'squashfs-tools' 'libisoburn' 'dosfstools' 'lynx' 'pacman-mirrorlist32' 'archlinux32-keyring')
conflicts=('archiso' 'archiso-dual')
source=(
  "https://github.com/archlinux32/${pkgname}/releases/download/${_target_arch}-v${pkgver}/${pkgname}-${_target_arch}-v${pkgver}.tar.xz"{,.sig}
)
sha512sums=(
  '1f6488d08875451e39c3f45f00ac3427018dcf6791bb5f7389fced560efb0eb2d196181a02f748424d713a37b295405d263aacfa4abb4249231b3764a4615e65'
  'SKIP'
)
validpgpkeys=(
  '5FDCA472AB93292BC678FD59255A76DB9A12601A'
  'DE9F7688CACF04FEB81A6C590AEEC90755DA7B5A'
)

package() {
  ls -lA
  make -C "${srcdir}/${pkgname}-${_target_arch}-v${pkgver}" DESTDIR="${pkgdir}" install
}
