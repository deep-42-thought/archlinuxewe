# repo: releng

_target_arch=$(printf '%s' i 6 8 6)

pkgname=archiso32
pkgver=34
pkgrel=1
pkgdesc='Tools for creating Arch Linux live and install iso images - for '"${_target_arch}"
arch=('any')
license=('GPL')
url='https://git.archlinux32.org/archlinux32/archiso32'
depends=('make' 'arch-install-scripts' 'squashfs-tools' 'libisoburn' 'dosfstools' 'lynx' 'pacman-mirrorlist32' 'archlinux32-keyring')
conflicts=('archiso' 'archiso-dual')
source=(
  "https://git.archlinux32.org/archlinux32/${pkgname}/archive/${_target_arch}-v${pkgver}.tar.gz"
)
sha512sums=(
  '88439b6cbdc24a330a2d95227ce60e8a7f5d50a081ed688ebae1f9292196c9036da8570264100504f6799b90977e43adc840668c3385f14ef93c41cba28b6d33'
)

package() {
  make -C "${srcdir}/${pkgname}" DESTDIR="${pkgdir}" install
}
