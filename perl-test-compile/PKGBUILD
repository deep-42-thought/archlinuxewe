pkgname='perl-test-compile'
pkgver='1.3.0'
pkgrel='5'
pkgdesc='Check whether Perl files compile correctly.'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-test-compile-internal=1.3.0')
optdepends=(
  'perl-devel-checkos')
depends=(
  'perl>=5.6.2 perl-universal-require perl-version')
makedepends=(
  'perl-module-build>=0.38')
checkdepends=(
  'perl-perl-critic'
  'perl-test-consistentversion'
  'perl-test-hasversion'
  'perl-test-perl-critic'
