pkgname='perl-scalar-util-numeric'
pkgver='0.40'
pkgrel=4
pkgdesc='numeric tests for perl scalars'
arch=('x86_64' 'pentium4' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl-extutils-makemaker'
)
