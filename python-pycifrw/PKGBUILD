# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname=python-pycifrw
_pkgname='PyCifRW'
pkgver=4.4.3
pkgrel=21
pkgdesc='Python library for interacting with Crystallographic Information Framework (CIF) files.'
arch=('i686' 'pentium4' 'x86_64')
url='https://bitbucket.org/jamesrhester/pycifrw/src/development/'
license=('custom')
_pinned_dependencies=(
  'glibc>=2.31'
)
depends=(
  "${_pinned_dependencies[@]}"
  'python<3.10'
  'python>=3.9')
makedepends=(
  'python-setuptools')

source=("https://pypi.python.org/packages/d5/fc/27bd4242391f68aa1c763b76215d9019e3a6dde6e08eb4829239679b5eba/PyCifRW-${pkgver}.tar.gz")
sha512sums=('338cf6a1d1455b1be181743a2efedf0430559d10c12c2831b3a70892edad374f04bd2ef932a5589d7780d92cfda58b5805f9202ea12ff2f89ca4ca91d804da0e')

build() {
  cd ${_pkgname}-${pkgver}
  python setup.py build
}

package_python-pycifrw() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}/" --optimize=1 --skip-build
  install -D 'LICENSE' "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
