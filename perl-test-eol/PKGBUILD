pkgver=2.02
pkgrel=3
pkgdesc='Check the correct line endings in your project'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl-extutils-makemaker'
  'perl-file-temp'
  'perl-pathtools'
  'perl-test-simple>=0.88')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-pathtools'
  'perl-test-simple')
