pkgname='perl-data-printer'
pkgver=1.000002
pkgrel=1
pkgdesc='colored pretty-print of Perl data structures and objects'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl-file-temp'
  'perl-pathtools'
  'perl-scalar-list-utils'
  'perl-test-simple'
  'perl-version>=0.77')
makedepends=(
  'perl-extutils-makemaker')
checkdepends=(
  'perl-io-pty-easy'
  'perl-yaml-syck'
  'perl-file-which'
  'perl-capture-tiny'
  'perl-dbi'
