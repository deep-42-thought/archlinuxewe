# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=perl-file-map
_pkgname='File-Map'
pkgver=0.64
pkgrel='2'
_distdir="${_pkgname}-${pkgver}"
pkgdesc="Memory mapping made simple and safe."
arch=('x86_64' 'i686')
url="https://github.com/Leont/file-map"
license=('GPL' 'PerlArtistic')
depends=(
  'perl>=5.8.0'
  'perl-carp'
  'perl-perlio-layers'
  'perl-sub-exporter-progressive>=0.001005'
  'perl-xsloader')
makedepends=(
  'perl-io'
  'perl-module-build>=0.28'
  'perl-scalar-list-utils'
  'perl-test-fatal'
  'perl-test-simple'
  'perl-test-warnings>=0.005'
  'perl-time-hires')
optdepends=(
  'perl>=5.8.8')
checkdepends=('perl-sub-exporter-progressive' 'perl-test-fatal')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/L/LE/LEONT/${_distdir}.tar.gz")
sha256sums=('03e42eb2de185b1e257c7a0ed9761a20b7d51f522464c713b20f43d47491a8c9')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "${srcdir}/${_distdir}"
    perl Build.PL
    perl Build
  )
}

check() {
  cd "${srcdir}/${_distdir}"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    perl Build test
  )
}

package() {
  cd "${srcdir}/${_distdir}"
  perl Build install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
