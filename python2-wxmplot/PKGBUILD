pkgname=python2-wxmplot
pkgver=0.9.22
pkgrel=1
pkgdesc='A library for plotting in wxPython using matplotlib'
arch=('any')
url='https://pypi.python.org/pypi/wxmplot/0.9.18'
license=('OSI Approved :: MIT License')
groups=()
depends=(
  'python2'
  'wxpython'
  'python2-matplotlib'
)
makedepends=(
  'python2-setuptools'
)
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://pypi.python.org/packages/9c/96/a187ab181978e2cf4fbee52a916033ef6e22f316e427e16fd2dabd520688/${pkgname#*-}-${pkgver}.tar.gz"
)
sha512sums=('40d1c56d8e217e418a69bb804944dcfd22066882ef1068f8df3fb7fe0e56d38e5a968aff57e09d5afdd511ed268bd6f30222e4e00a83a65942e8699dc200bc1b')

build() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py build

}

package() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py install --skip-build --root="${pkgdir}" --prefix=/usr

}
