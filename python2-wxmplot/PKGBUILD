pkgname=python2-wxmplot
pkgver=0.9.23
pkgrel=1
pkgdesc='A library for plotting in wxPython using matplotlib'
arch=('any')
url='https://pypi.python.org/pypi/wxmplot/0.9.18'
license=('OSI Approved :: MIT License')
groups=()
depends=(
  'python2'
  'wxpython'
  'python2-matplotlib'
)
makedepends=(
  'python2-setuptools'
)
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://pypi.python.org/packages/0d/d7/a00e8fb7410b732b492cae241ccd7303777cde6afca403a28c48eb5b3106/${pkgname#*-}-${pkgver}.tar.gz"
)
sha512sums=('f7433250bbf9db3586e2a36aeb01fd96b7fd9d80b336b6028b0866f85e93bb7039fe0fe9d1727e0b2ab470740bbf65d7ed5da95351240d2a8af832340836ca8f')

build() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py build

}

package() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py install --skip-build --root="${pkgdir}" --prefix=/usr

}
