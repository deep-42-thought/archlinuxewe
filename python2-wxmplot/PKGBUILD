pkgname=python2-wxmplot
pkgver=0.9.28
pkgrel=1
pkgdesc='A library for plotting in wxPython using matplotlib'
arch=('any')
url='https://pypi.python.org/pypi/wxmplot/0.9.18'
license=('OSI Approved :: MIT License')
groups=()
depends=(
  'python2'
  'wxpython'
  'python2-matplotlib'
)
makedepends=(
  'python2-setuptools'
)
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://pypi.python.org/packages/d6/42/e9ce8b70613c6f380abb1294978e88cabbe3314543b84085f2e4fb7f738f/${pkgname#*-}-${pkgver}.tar.gz"
)
sha512sums=('8ff7683fe00c6066e180df97ae15664920b560044a37bac3a1d94bb40b343e229c239fe3dec051a127916ea6f187e7c770fb203abc1e37feccaee7aec2e9bb7e')

build() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py build

}

package() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py install --skip-build --root="${pkgdir}" --prefix=/usr

}
