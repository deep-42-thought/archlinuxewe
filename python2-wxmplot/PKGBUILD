pkgname=python2-wxmplot
pkgver=0.9.32
pkgrel=1
pkgdesc='A library for plotting in wxPython using matplotlib'
arch=('any')
url='https://pypi.python.org/pypi/wxmplot/0.9.18'
license=('OSI Approved :: MIT License')
groups=()
depends=(
  'python2>=2.7'
  'python2<2.8'
  'wxpython'
  'python2-matplotlib'
)
makedepends=(
  'python2-setuptools'
)
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://pypi.python.org/packages/f1/a4/6cf710d204a888ef2be2ce42bbdc9d610d4c97a1378543d0b0a1a7861951/${pkgname#*-}-${pkgver}.tar.gz"
)
sha512sums=('34cc9c045222ae54d5bfef270ac2376dee76b80ce2e7ed4b013ba58a2d43f9965acaa7d18c84b77061502ad4687bb07761b03b9fa2665749a243bc23b58f980c')

build() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py build

}

package() {

    cd ${pkgname#*-}-${pkgver}
    python2 setup.py install --skip-build --root="${pkgdir}" --prefix=/usr

}
