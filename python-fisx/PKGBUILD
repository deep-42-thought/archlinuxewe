# Maintainer: Erich Eckner <arch at eckner dot net>
pkgname=python-fisx
_pkgname="${pkgname#*-}"
pkgver=1.1.9
pkgrel=1
pkgdesc='Enhanced C++ port of the Physics routines used by PyMca'
arch=('i686' 'pentium4' 'x86_64')
url='https://github.com/vasole/fisx'
license=('MIT License')
_pinned_dependencies=(
  'gcc-libs=10.2.0'
  'glibc>=2.31'
)
makedepends=(
  'cython>=0.17'
  'python-numpy'
  'python-setuptools')
depends=(
  'python>=3.8'
  'python<3.9'
  'python-numpy')
source=(
    "${_pkgname}-v${pkgver}.tar.gz::https://github.com/vasole/${_pkgname}/archive/v${pkgver}.tar.gz"
)
sha512sums=('f90d4a46e4e1e920926a291b51bc8d28c59b7e5fa326655f7d5db712cbbc61642b47c0df65bbf0c36a7bed13796279af10dccac2fa4be3b4cda33f8e8af8c0bb')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --skip-build --root="${pkgdir}" --prefix=/usr
}
