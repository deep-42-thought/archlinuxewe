# Maintainer:  Erich Eckner <arch at eckner dot net>
# Contributor: Dave Reisner <d@falconindy.com>

# repo: releng

pkgname=asp32
pkgver=0.0
pkgrel=1
pkgdesc="Arch Linux build source file management tool"
arch=(any)
url='https://git.archlinux32.org/archlinux32/asp32/'
license=(MIT)
depends=(awk bash jq git libarchive)
makedepends=(asciidoc)
conflicts=('asp')
source=("https://sources.archlinux32.org/sources/${pkgname}-v${pkgver}.tar.gz"{,.sig})
sha512sums=(
  'eb51380220e47bfcb735ceae8c072c2a5798ccfb0a5f72a5c1d0788d6379a48b2197108c2ffad68c987c60412978929362969f4f7ea3fbd5916ec7e0f8d93f34'
  'SKIP'
)
validpgpkeys=('DE9F7688CACF04FEB81A6C590AEEC90755DA7B5A')

build() {
  make -C "${pkgname}-v${pkgver}"
}

package() {
  make -C "${pkgname}-v${pkgver}" PREFIX=/usr DESTDIR="$pkgdir" install
  install -Dm644 "${pkgname}-v${pkgver}/LICENSE" "$pkgdir/usr/share/licenses/asp/LICENSE"
}
