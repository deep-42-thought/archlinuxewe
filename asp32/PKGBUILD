# Maintainer:  Erich Eckner <arch at eckner dot net>
# Contributor: Dave Reisner <d@falconindy.com>

pkgname=asp32
pkgver=0.0
pkgrel=1
pkgdesc="Arch Linux build source file management tool"
arch=(any)
url='https://github.com/archlinux32/asp32/'
license=(MIT)
depends=(awk bash jq git libarchive)
makedepends=(asciidoc)
conflicts=('asp')
source=("$pkgname-$pkgver.tar.gz::https://github.com/archlinux32/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('2521125cc49139700dae77b52ffc0db339ddbf1347d37f49e03b896214a61c624fa70c530d4254b3f26c92b4cd6e3fcea0ebd4cee0d1e14e16a40a9c6a702a67')

build() {
  make -C $pkgname-$pkgver
}

package() {
  make -C $pkgname-$pkgver PREFIX=/usr DESTDIR="$pkgdir" install
  install -Dm644 $pkgname-$pkgver/LICENSE "$pkgdir/usr/share/licenses/asp/LICENSE"
}
