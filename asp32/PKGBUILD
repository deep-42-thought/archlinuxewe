# Maintainer:  Erich Eckner <arch at eckner dot net>
# Contributor: Dave Reisner <d@falconindy.com>

# repo: releng

pkgname=asp32
pkgver=0.2
pkgrel=1
pkgdesc="Arch Linux build source file management tool"
arch=(any)
url='https://git.archlinux32.org/archlinux32/asp32/'
license=(MIT)
depends=(awk bash jq git libarchive)
makedepends=(asciidoc)
conflicts=('asp')
source=("https://sources.archlinux32.org/sources/${pkgname}-${pkgver}.tar.gz"{,.sig})
sha512sums=('f8a6425dd460e6a78dfed8cd423e4cc077e1fe7268e9eadce75591d97eb5d003dae843601da686d2ea3a23c11b27eb5e94ecd445b1730d694a50c1d00c803a4c'
            'SKIP')
validpgpkeys=('DE9F7688CACF04FEB81A6C590AEEC90755DA7B5A')

build() {
  make -C "${pkgname}-${pkgver}"
}

package() {
  make -C "${pkgname}-${pkgver}" PREFIX=/usr DESTDIR="$pkgdir" install
  install -Dm644 "${pkgname}-${pkgver}/LICENSE" "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
