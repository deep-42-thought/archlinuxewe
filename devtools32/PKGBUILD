pkgname=devtools32
pkgver=20170514
pkgrel=2
pkgdesc='Tools for Arch Linux package maintainers, also for 32 bit'
arch=('any')
license=('GPL')
url='https://github.com/archlinux32/devtools32/'
depends=('namcap' 'openssh' 'subversion' 'rsync' 'arch-install-scripts')
conflicts=('devtools')
source=("$pkgname-$pkgver.tar.gz::https://github.com/archlinux32/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('05a8d0c4699a4ced8eab29d57d984159103c52117ca8a4d7fabaea72a690cd0605774b2841d9e90f8b94a30011f702c4ddab522a7ee6496c8af6c8b41f8d95e9')

build() {
	cd "${pkgname}-${pkgver}"
	make PREFIX=/usr
}

package() {
	cd "${pkgname}-${pkgver}"
	make PREFIX=/usr DESTDIR=${pkgdir} install
}
