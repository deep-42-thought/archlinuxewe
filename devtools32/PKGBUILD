# repo: releng

pkgname=devtools32
pkgver=20180531
pkgrel=1
pkgdesc='Tools for Arch Linux package maintainers, also for 32 bit'
arch=('any')
license=('GPL')
url='https://git.archlinux32.org/archlinux32/devtools32/'
depends=('namcap' 'openssh' 'subversion' 'rsync' 'arch-install-scripts'
	'pacman-mirrorlist32' 'archlinux32-keyring' 'git' 'mercurial' 'bzr')
conflicts=('devtools')
source=(
  "$pkgname-$pkgver.tar.gz::https://git.archlinux32.org/archlinux32/$pkgname/archive/v$pkgver.tar.gz"
)
sha512sums=('f161b33ccc35da813326c868e0081b9e0ec611783755fbceedb77bf1990c42812c0b9bc678380445adead23ff82e3f742091752c4b5bec264a3fc7b780d28862')

build() {
	cd "${pkgname}"
	make PREFIX=/usr
}

package() {
	cd "${pkgname}"
	make PREFIX=/usr DESTDIR=${pkgdir} install
}

