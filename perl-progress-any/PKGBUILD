pkgname='perl-progress-any'
pkgver=0.216
pkgrel=1
pkgdesc='Record progress to any output'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-exception'
  'perl-test-simple>=0.98')
depends=(
  'perl-time-duration'
  'perl-time-hires')
