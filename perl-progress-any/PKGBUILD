  'perl>=5.10.1'
  'perl-time-duration'
)
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-perl-osnames>=0.09'
  'perl-test-exception'
