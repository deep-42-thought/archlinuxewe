pkgver=0.0
pkgrel=1
pkgdesc="extra-capabilities for libalpm: a hook which misses from linux"
arch=('any')
url="https://opensources.eckner.net/ls.php?ls=${pkgname}"
license=('GPL')
groups=()
depends=()
makedepends=('linux')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(
    "${pkgname}-${pkgver}.tar.gz::https://opensources.eckner.net/dl.php?dl=${pkgname}-${pkgver}"
)
sha512sums=('f278cae531cc4bd0a7f9d112f8b84b6857e497792083e4ec8ea93da7c12e48a13b8de1188cca9a4ad55de9d4d23a8b0e2bfa1659f5acfffb49d7b5d172112aee')

build() {

    cd ${pkgname}-${pkgver}
    make

}

package() {

    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

}
