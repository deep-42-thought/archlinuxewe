pkgname='perl-perl-critic-itch'
pkgver='0.07'
pkgrel='1'
pkgdesc='Perl::Critic::Itch - A collection of Policies to solve some Itches'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl-perl-critic>=1.052'
  'perl-perl-critic-testutils>=1.052'
  'perl-perl-critic-utils>=1.052'
  'perl-perl-critic-violation>=1.052'
  'perl-test-simple'
