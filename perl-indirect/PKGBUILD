pkgname='perl-indirect'
pkgver=0.39
pkgrel=2
pkgdesc='Lexically warn about using the indirect method call syntax.'
arch=('x86_64' 'i686' 'pentium4')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-io'
  'perl-lib'
  'perl-pathtools'
  'perl-socket'
  'perl-test-simple'
)
