pkgname='perl-indirect'
pkgver='0.36'
pkgrel='1'
pkgdesc='Lexically warn about using the indirect method call syntax.'
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-carp' 'perl-xsloader')
makedepends=('perl-carp' 'perl-extutils-makemaker' 'perl-io' 'perl-socket' 'perl-test-simple' 'perl-xsloader' 'perl-lib' 'perl-extutils-makemaker')
checkdepends=('perl-devel-declare')
url='https://metacpan.org/release/indirect'
_distdir="indirect-${pkgver}"
source=("https://cpan.metacpan.org/authors/id/V/VP/VPIT/${_distdir}.tar.gz")
sha512sums=('27f86702a2b3597e2bc20390130584324bfe86cc4d9f33a488b4788d6e1513ac19dfd4e1407f29b6f862172b020b3001a248450ad8dddb5a31e07220c0783ceb')

build(){
  cd "${srcdir}/${_distdir}"
  
  # Setting these env variables overwrites any command-line-options we don't want...
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='${pkgdir}'" \
    PERL_MB_OPT="--installdirs vendor --destdir '${pkgdir}'" \
    MODULEBUILDRC=/dev/null

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    perl Makefile.PL
    make
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build.PL
    perl Build
  fi
}

check(){
  cd "${srcdir}/${_distdir}"

  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make test
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build test
  fi
}

package(){
  cd "${srcdir}/${_distdir}"
  
  # If using Makefile.PL
  if [ -r Makefile.PL ]; then
    make install
  # If using Build.PL
  elif [ -r Build.PL ]; then
    perl Build install
  fi

  # remove perllocal.pod and .packlist
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
