pkgname='perl-config-any'
pkgver='0.32'
pkgrel='2'
pkgdesc='Load configuration from different file formats, transparently'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl-module-pluggable>=3.6'
)
makedepends=(
  'perl-test-simple'
)
checkdepends=(
  'perl-config-general'
  'perl-config-tiny'
  'perl-cpanel-json-xs'
