pkgname='perl-http-body'
pkgver='1.22'
pkgrel='2'
pkgdesc='HTTP Body Parser'
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl-carp'
  'perl-digest-md5'
  'perl-file-temp>=0.14'
  'perl-http-message'
  'perl-io>=1.14')
makedepends=(
  'perl-encode'
  'perl-extutils-makemaker'
  'perl-pathtools'
  'perl-test-deep'
  'perl-test-simple>=0.86')
checkdepends=('perl-test-pod' 'perl-test-pod-coverage')
