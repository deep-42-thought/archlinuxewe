install="${pkgname}.install"
source=("https://ftp.fau.de/apache/${pkgname%-courier}/source/Mail-SpamAssassin-${pkgver}.tar.gz"
        "https://www.apache.org/dist/${pkgname%-courier}/source/Mail-SpamAssassin-${pkgver}.tar.gz.asc"
