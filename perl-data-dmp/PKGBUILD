pkgname='perl-data-dmp'
pkgver=0.241
pkgrel=1
pkgdesc='Dump Perl data structures as Perl code'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-exporter>=5.57'
  'perl-regexp-stringify'
  'perl-scalar-list-utils')
makedepends=(
  'perl-extutils-makemaker'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple>=0.98')
