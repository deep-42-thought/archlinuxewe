pkgname='perl-sah'
pkgver='0.9.45'
pkgrel='2'
pkgdesc='Schema for data structures (specification)'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=(
  'perl'
  'perl-extutils-makemaker'
  'perl-file-sharedir-install>=0.06'
  'perl-io'
  'perl-pathtools'
  'perl-test-simple'
)
