# Maintainer: Erich Eckner <arch at eckner dot net>

pkgname='perl-file-find-object-rule'
pkgver=0.0306
pkgrel='3'
pkgdesc="Alternative interface to File::Find::Object"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.8.0'
  'perl-carp'
  'perl-class-xsaccessor'
  'perl-file-find-object>=0.2.1'
  'perl-number-compare'
  'perl-pathtools'
  'perl-text-glob')
makedepends=(
  'perl-module-build>=0.36'
  'perl-test-simple')
checkdepends=('perl-test-pod' 'perl-test-pod-coverage' 'perl-test-trailingspace')
url='http://search.cpan.org/~shlomif/File-Find-Object-Rule-0.0305/'
_distdir="File-Find-Object-Rule-${pkgver}"
source=("http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/${_distdir}.tar.gz")
sha512sums=('6d153e9a6eedf49ec618554cf0985ae62e0bfb22cce2e822ee90e2471fd028d515a88234620002ff96671be4fa2fea5638cd082808fe36d1b560f70432603b0c')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    perl Build.PL
    perl Build
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    perl Build test
  )
}

package() {
  cd "$srcdir/$_distdir"
  perl Build install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
