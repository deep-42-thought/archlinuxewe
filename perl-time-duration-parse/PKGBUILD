pkgname='perl-time-duration-parse'
pkgver=0.16
pkgrel=3
pkgdesc='Parse string that represents time duration'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-carp'
  'perl-exporter>=5.57')
makedepends=(
  'perl-extutils-makemaker'
  'perl-test-simple>=0.88'
  'perl-time-duration')
