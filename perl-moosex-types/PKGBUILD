# Maintainer: Erich Eckner <arch at eckner dot net>
# Contributor:Brian Bidulock <bidulock@openss7.org>
# Contributor: chimeracoder <dev@chimeracoder.net
pkgname='perl-moosex-types'
pkgver=0.49
pkgrel=1
pkgdesc="Organise your Moose types in libraries"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
provides=(
  'perl-moosex-types-base=0.49'
  'perl-moosex-types-checkedutilexports=0.49'
  'perl-moosex-types-combine=0.49'
  'perl-moosex-types-moose=0.49'
  'perl-moosex-types-typedecorator=0.49'
  'perl-moosex-types-undefinedtype=0.49'
  'perl-moosex-types-util=0.49'
  'perl-moosex-types-wrapper=0.49')
depends=(
  'perl>=5.8.0'
  'perl-base'
  'perl-carp'
  'perl-carp-clan>=6.00'
  'perl-exporter'
  'perl-module-runtime'
  'perl-moose>=1.06'
  'perl-moose-exporter'
  'perl-moose-meta-typeconstraint-union'
  'perl-moose-util-typeconstraints'
  'perl-namespace-autoclean>=0.16'
  'perl-scalar-list-utils>=1.19'
  'perl-sub-exporter'
  'perl-sub-exporter-formethods>=0.100052'
  'perl-sub-install'
  'perl-sub-name'
  'perl-sub-quote')
makedepends=(
  'perl-if'
  'perl-lib'
  'perl-module-build-tiny>=0.034'
  'perl-module-metadata'
  'perl-moose-role'
  'perl-pathtools'
  'perl-test-fatal'
  'perl-test-requires'
  'perl-test-simple>=0.88')
url='http://search.cpan.org/dist/MooseX-Types'
source=("http://search.cpan.org/CPAN/authors/id/E/ET/ETHER/MooseX-Types-${pkgver}.tar.gz")
sha512sums=('847037121bbd8f13be99336209dead74b1f025425edaa90b1487fb6705f07d81bc307437137079375d0b2de0ded2f9e9358eb28f04e8eba76f0f9d72d6469e84')
_distdir="MooseX-Types-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null                                \
      PERL_MM_FALLBACK_SILENCE_WARNING="blabla"

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
