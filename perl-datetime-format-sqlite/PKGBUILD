pkgname='perl-datetime-format-sqlite'
pkgver='0.11'
pkgrel=10
pkgdesc='Parse and format SQLite dates and times'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-datetime>=0.1'
  'perl-datetime-format-builder>=0.6'
)
makedepends=(
  'perl-extutils-makemaker'
)
