  'perl-extutils-makemaker>=6.64'
  'perl-io-stringy'
  'perl-test-simple>=1.00')
depends=(
  'perl>=5.34'
  'perl<5.35'
  'perl-file-temp>=0.01'
  'perl-pathtools>=0.01'
  'perl-test-simple>=0.01')
