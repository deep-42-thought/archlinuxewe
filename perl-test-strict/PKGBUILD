pkgname='perl-test-strict'
pkgver=0.47
pkgrel=1
pkgdesc='Check syntax, presence of use strict; and test coverage'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=(
  'perl>=5.6.0'
  'perl-file-temp>=0.01'
  'perl-pathtools>=0.01'
  'perl-test-simple>=0.01')
makedepends=(
  'perl-extutils-makemaker>=6.64'
  'perl-io-stringy'
  'perl-test-simple>=1.00')
